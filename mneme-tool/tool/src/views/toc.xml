<interface>
	<!-- title and header -->
	<title>
		<message selector="toc-title" model="submission.assessment.title" />
	</title>
	<header>
		<message selector="toc-header" model="submission.assessment.title" />
	</header>

	<container>
		<!-- courier to keep the session alive -->
		<courier destination="/courier" frequency="600" />
	
		<!-- repeat the nav up top -->
		<alias to="nav" />

		<!-- timer for timed tests -->
		<countdownTimer submit="TRUE">
			<duration>
				<message selector="timer-duration">
					<model type="duration" concise="TRUE" ref="submission.expiration.limit" />
				</message>
				<model ref="submission.expiration.limit" />
			</duration>
			<remaining>
				<message selector="timer-remaining" />
			</remaining>
			<timeTillExpire>
				<model ref="submission.expiration.duration" />
			</timeTillExpire>
			<destination template="/submitted/{0}">
				<model ref="submission.id" />
			</destination>
			<included>
				<decision model="review" reversed="TRUE" />
				<hasValueDecision model="submission.expiration" />
				<compareDecision model="submission.expiration.cause" constant="timeLimit" />
			</included>
		</countdownTimer>
		
		<!-- timer for near-due tests -->
		<countdownTimer submit="TRUE">
			<duration>
				<message selector="timer-due">
					<model type="date" concise="TRUE" ref="submission.expiration.time" />
				</message>
				<model ref="submission.expiration.limit" />
			</duration>
			<remaining>
				<message selector="timer-remaining" />
			</remaining>
			<timeTillExpire>
				<model ref="submission.expiration.duration" />
			</timeTillExpire>
			<destination template="/submitted/{0}">
				<model ref="submission.id" />
			</destination>
			<included>
				<decision model="review" reversed="TRUE" />
				<hasValueDecision model="submission.expiration" />
				<compareDecision model="submission.expiration.cause" constant="closedDate" />
			</included>
		</countdownTimer>

		<!-- final review instructions -->
		<alert selector="final-instructions">
			<included>
				<decision model="finalReview" />
			</included>
		</alert>

		<!-- test header -->
		<section>
			<title>
				<message selector="toc-section-title">
					<model ref="submission.assessment.title" />
					<model ref="submission.assessment" delegate="QuestionsAnswered" tool="sakai.mneme" />
					<model ref="submission.assessment.numQuestions" />
					<model ref="submission" delegate="SubmissionScore" tool="sakai.mneme" />
				</message>
			</title>
			<included>
				<decision model="submission.assessment.randomAccess" />
			</included>
		</section>

		<!-- question listing -->
		<section>
			<container>

				<!-- for each question -->
				<entityList style="FORM">
					<iterator name="question" model="submission.assessment.questions" />

					<!-- section title (click to instructions) -->
					<headings>
						<heading>
							<decision reversed="TRUE" model="question.section.isMerged" />
							<decision model="question.sectionOrdering.isFirst" />
							<navigation style="LINK">
								<title>
									<message selector="toc-questions-title">
										<model ref="question.section.ordering.position" />
										<model ref="question.section.title" />
										<model delegate="QuestionsAnswered" tool="sakai.mneme" />
										<model ref="question.section.numQuestions" />
										<model ref="question.section" delegate="SectionScore" tool="sakai.mneme" />
									</message>
								</title>
								<disabled>
									<compareDecision model="submission.assessment.questionPresentation">
										<constant value="BY_ASSESSMENT" />
										<constant value="BY_SECTION" />
									</compareDecision>
								</disabled>
								<destination template="/section_instructions/{0}/{1}">
									<model ref="submission.id" />
									<model ref="question.section.id" />
								</destination>
							</navigation>
						</heading>
					</headings>

					<columns>

						<!-- icon -->
						<modelColumn pixels="16">
							<model delegate="FormatQuestionDecoration" tool="sakai.mneme" />
						</modelColumn>

						<!-- question display (w/ by-question link) -->
						<modelColumn>
							<message selector="toc-question-entry">
								<model delegate="FormatQuestionNumber" tool="sakai.mneme" />
								<model type="text" stripHtml="TRUE" max="60" ref="question.title" />
								<model delegate="QuestionScore" tool="sakai.mneme" />
							</message>
							<entityNavigations>
								<navigation>
									<destination template="/question/{0}/q{1}">
										<model ref="submission.id" />
										<model ref="question.id" />
									</destination>
								</navigation>
							</entityNavigations>
							<included>
								<compareDecision model="submission.assessment.questionPresentation" constant="BY_QUESTION" />
							</included>
						</modelColumn>

						<!-- question display (w/ by-section link) TODO: might have just one column with include on the entity nav -->
						<modelColumn>
							<message selector="toc-question-entry">
								<model delegate="FormatQuestionNumber" tool="sakai.mneme" />
								<model type="text" stripHtml="TRUE" max="60" ref="question.title" />
								<model delegate="QuestionScore" tool="sakai.mneme" />
							</message>
							<entityNavigations>
								<navigation>
									<destination template="/question/{0}/s{1}#{2}">
										<model ref="submission.id" />
										<model ref="question.section.id" />
										<model ref="question.id" />
									</destination>
								</navigation>
							</entityNavigations>
							<included>
								<compareDecision model="submission.assessment.questionPresentation" constant="BY_SECTION" />
							</included>
						</modelColumn>

						<!-- question display (w/ by-test link) TODO: might have just one column with include on the entity nav -->
						<modelColumn>
							<message selector="toc-question-entry">
								<model delegate="FormatQuestionNumber" tool="sakai.mneme" />
								<model type="text" stripHtml="TRUE" max="60" ref="question.title" />
								<model delegate="QuestionScore" tool="sakai.mneme" />
							</message>
							<entityNavigations>
								<navigation>
									<destination template="/question/{0}/a#{1}">
										<model ref="submission.id" />
										<model ref="question.id" />
									</destination>
								</navigation>
							</entityNavigations>
							<included>
								<compareDecision model="submission.assessment.questionPresentation" constant="BY_ASSESSMENT" />
							</included>
						</modelColumn>

					</columns>
				</entityList>
			</container>
			<included>
				<decision model="submission.assessment.randomAccess" />
			</included>
		</section>

		<!-- toc icon key -->
		<section>
			<container>
				<iconKey title="toc-key-title">
					<icons>
						<icon icon="/icons/unanswered.png" message="toc-key-unanswered" />
						<icon icon="/icons/markedforreview.png" message="toc-key-mark-for-review" />
						<icon icon="/icons/missingrationale.png" message="toc-key-rationale" />
					</icons>
				</iconKey>
			</container>
			<included>
				<decision model="submission.assessment.randomAccess" />
			</included>
		</section>

		<!-- nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save-exit" accessKey="save-exit-access" description="save-exit-description" style="BUTTON" destination="/list" default="TRUE">
					<icon icon="/icons/exit.gif" style="LEFT" />
				</navigation>
				<navigation title="finish-exam" accessKey="finish-exam-access" description="finish-exam-description" style="BUTTON" submit="TRUE" id="finish">
					<icon icon="/icons/finish.gif" style="LEFT" />
					<confirm decision="TRUE" cancelSelector="cancel" cancelIcon="/icons/cancel.gif" selector="finish-confirm" />
					<destination template="/submitted/{0}" model="submission.id" />
				</navigation>
				<divider />
				<navigation title="instructions" accessKey="instructions-access" description="instructions-description" style="LINK">
					<icon icon="/icons/test.png" style="LEFT" />
					<destination template="/instructions/{0}{1}">
						<model ref="submission.id" />
						<model ref="sakai_destination" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
