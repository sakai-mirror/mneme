<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="tests-header">
			<model type="icon" icon="/icons/folder_page.png" />
		</message>
	</header>
	<title>
		<message selector="tests-title" />
	</title>
	<container>

		<!-- the list of assessments -->
		<entityList style="FLAT">
			<iterator name="assessment">
				<model ref="assessments" indexRef="id" />
			</iterator>
			<emptyTitle>
				<message selector="no-assessments" />
			</emptyTitle>
			<columns>
				<column>
					<title>
						<message selector="assessment-type" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/assessments/0A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/assessments/0D" />
						</desc>
					</sort>
					<navigations>
						<navigation description="assessment-type-test">
							<icon icon="/icons/test_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="test" />
							</included>
						</navigation>
						<navigation description="assessment-type-survey">
							<icon icon="/icons/survey_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="survey" />
							</included>
						</navigation>
						<navigation description="assessment-type-assignment">
							<icon icon="/icons/assignment_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="assignment" />
							</included>
						</navigation>
					</navigations>
				</column>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="assessment.id" />
					</value>
					<model ref="ids.values" />
					<entityActions>
						<navigation destination="/assessment_add/" title="add-test" style="LINK" description="add-test-description" submit="TRUE">
							<icon icon="/icons/document_add.png" style="LEFT" />
						</navigation>
						<navigation destination="/assessments_delete" title="delete-tests" style="LINK" description="delete-tests-description"
							submit="TRUE" selectRequirement="SOME" selectRequirementMessage="delete-failed-requirements">
							<icon icon="/icons/delete.png" style="LEFT" />
						</navigation>
						<container>
							<container>
								<navigation title="archive-tests" style="LINK" description="archive-tests-description" submit="TRUE"
									selectRequirement="SOME" selectRequirementMessage="archive-failed-requirements">
									<icon icon="/icons/make_inactive.png" style="LEFT" />
									<destination template="/ARCHIVE/{0}{1}/{2}">
										<model ref="sort_column" />
										<model ref="sort_direction" />
										<model ref="assessment.id" />
									</destination>
								</navigation>
								<navigation title="slash" style="LINK" />
								<navigation title="restore-tests" style="LINK" description="restore-tests-description" submit="TRUE">
									<destination template="/assessments_restore/{0}{1}">
										<model ref="sort_column" />
										<model ref="sort_direction" />
									</destination>
								</navigation>
							</container>
						</container>
					</entityActions>
				</selectionColumn>
				<column>
					<title>
						<message selector="assessment-title" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/assessments/1A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/assessments/1D" />
						</desc>
					</sort>
					<container>
						<navigation style="LINK" submit="TRUE">
							<title>
								<message>
									<model ref="assessment.title" missing="no-title" />
								</message>
							</title>
							<destination template="/assessment_edit/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>

					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="assessment-view" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE">
							<icon icon="/icons/preview.png" style="LEFT" />
							<destination template="/assessment_preview/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
				<column>
					<title>
						<message selector="assessment-odate" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="2" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/assessments/2A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/assessments/2D" />
						</desc>
					</sort>
					<container>
						<dateEdit>
							<model ref="assessment.dates.openDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-ddate" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="3" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/assessments/3A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/assessments/3D" />
						</desc>
					</sort>
					<container>
						<dateEdit>
							<model ref="assessment.dates.dueDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-status" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="4" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/assessments/4A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/assessments/4D" />
						</desc>
					</sort>
					<navigations>
						<navigation style="LINK" submit="TRUE" description="published-alt">
							<icon icon="/icons/publish_ok.png" style="LEFT" />
							<destination template="/assessment_settings/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
							<included>
								<decision model="assessment.isValid" />
								<decision model="assessment.published" />
							</included>
						</navigation>
						<navigation description="unpublished-alt">
							<title>
								<message selector="dash" />
							</title>
							<included>
								<decision model="assessment.isValid" />
								<decision reversed="TRUE" model="assessment.published" />
							</included>
						</navigation>
					</navigations>
				</column>

				<modelColumn>
					<title>
						<message selector="assessment-action" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE" description="unpublished-alt">
							<icon icon="/icons/publish_rmv.png" style="LEFT" />
							<destination template="/assessment_unpublish/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
							<included>
								<decision model="assessment.isValid" />
								<decision model="assessment.published" />
							</included>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="published-alt">
							<icon icon="/icons/publish_new.png" style="LEFT" />
							<destination template="/assessment_settings/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
							<included>
								<decision model="assessment.isValid" />
								<decision reversed="TRUE" model="assessment.published" />
							</included>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="invalid-alt">
							<icon icon="/icons/attention.jpg" style="LEFT" />
							<destination template="/assessment_invalid/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
							<included>
								<decision reversed="TRUE" model="assessment.isValid" />
							</included>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="access">
							<icon icon="/icons/access.png" style="LEFT" />
							<destination template="/assessment_special/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="copy">
							<icon icon="/icons/page_copy.png" style="LEFT" />
							<destination template="/COPY/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
			</columns>
		</entityList>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="100%">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE"
					destination="/assessments">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/assessments">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
