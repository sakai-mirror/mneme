<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="tests-header">
			<model type="icon" icon="/icons/folder_page.png" />
		</message>
	</header>
	<title>
		<message selector="tests-title" />
	</title>
	<container>

		<!-- entity actions -->
		<entityActionBar width="100%">
			<container>
				<navigation destination="/test_add/" title="add-test" style="LINK" description="add-test-description" submit="TRUE">
					<icon icon="/icons/document_add.png" style="LEFT" />
				</navigation>
				<navigation destination="/tests_delete" title="delete-tests" style="LINK" description="delete-tests-description" submit="TRUE">
					<icon icon="/icons/delete.png" style="LEFT" />
				</navigation>
				<navigation destination="/tests_inactivate" title="inactivate-tests" style="LINK" description="inactivate-tests-description"
					submit="TRUE">
					<icon icon="/icons/make_inactive.png" style="LEFT" />
				</navigation>
				<navigation destination="/test_import_export" title="import-export-tests" style="LINK" description="import-export-tests-description"
					submit="TRUE">
					<icon icon="/icons/import_export.png" style="LEFT" />
				</navigation>
			</container>
		</entityActionBar>

		<!-- the list of assessments -->
		<entityList style="FLAT">
			<iterator name="assessment">
				<model ref="assessments" indexRef="id" />
			</iterator>
			<emptyTitle>
				<message selector="no-assessments" />
			</emptyTitle>
			<columns>
				<modelColumn>
					<title>
						<message selector="assessment-type" />
					</title>
					<model ref="assessment.type" delegate="FormatAssesmentType" tool="sakai.mneme" />
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/tests/0A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/tests/0D" />
						</desc>
					</sort>
				</modelColumn>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="assessment.id" />
					</value>
					<model ref="ids.values" />
				</selectionColumn>
				<column>
					<title>
						<message selector="assessment-title" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/tests/1A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/tests/1D" />
						</desc>
					</sort>
					<container>
						<navigation style="LINK" submit="TRUE">
							<title>
								<message>
									<model ref="assessment.title" missing="no-title" />
								</message>
							</title>
							<destination template="/test_edit/{0}">
								<model ref="assessment.id" />
							</destination>
						</navigation>

					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="assessment-view" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE">
							<icon icon="/icons/preview.png" style="LEFT" />
							<destination template="/tests">
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
				<column>
					<title>
						<message selector="assessment-odate" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="2" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/tests/2A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/tests/2D" />
						</desc>
					</sort>
					<container>
						<dateEdit>
							<model ref="assessment.dates.openDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-ddate" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="3" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/tests/3A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/tests/3D" />
						</desc>
					</sort>
					<container>
						<dateEdit>
							<model ref="assessment.dates.dueDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="assessment-active" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="4" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/tests/4A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/tests/4D" />
						</desc>
					</sort>
					<model ref="assessment.active" delegate="FormatAssesmentActive" tool="sakai.mneme" />
					<entityNavigations>
						<navigation submit="TRUE">
							<destination template="/test_publish/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</entityNavigations>
				</modelColumn>


				<modelColumn>
					<title>
						<message selector="assessment-action" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE" description="settings">
							<icon icon="/icons/settings.png" style="LEFT" />
							<destination template="/test_settings/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="access">
							<icon icon="/icons/access.png" style="LEFT" />
							<destination template="/test_access/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
						<navigation style="LINK" submit="TRUE" description="copy">
							<icon icon="/icons/page_copy.png" style="LEFT" />
							<destination template="/test_copy/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
			</columns>
		</entityList>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
