<interface title="tests-title" header="tests-header">

	<!--mode bar-->
	<modeBar>
		<container>
			<navigation destination="/tests" title="test-manager-nav-title" style="LINK" accessKey="test-manager-nav-access-key"
				description="test-manager-nav-description" disabled="TRUE" />
			<navigation destination="/grades" title="grading-nav-title" style="LINK" accessKey="grading-nav-access-key"
				description="grading-nav-description" />
			<navigation destination="/pools" title="pools-nav-title" style="LINK" accessKey="pools-nav-access-key"
				description="pools-nav-description" />
			<navigation destination="/list" title="student-view-nav-title" style="LINK" accessKey="student-view-nav-access-key"
				description="student-view-nav-description" />
		</container>
	</modeBar>

	<container>

		<!-- entity actions -->
		<entityActionBar width="100%">
			<container>
				<navigation destination="/test_edit/" title="add-test" style="LINK" description="add-test-description" submit="TRUE">
					<icon icon="/icons/add.png" style="LEFT" />
				</navigation>
				<navigation destination="/tests_delete" title="delete-tests" style="LINK" description="delete-tests-description" submit="TRUE">
					<icon icon="/icons/delete.png" style="LEFT" />
				</navigation>
			</container>
		</entityActionBar>

		<!-- the list of assessments -->
		<entityList style="FLAT">
			<iterator name="assessment" model="assessments" />
			<emptyTitle>
				<message selector="no-assessments" />
			</emptyTitle>
			<columns>
				<modelColumn>
					<title>
						<message selector="assessment-type" />
					</title>
					<model ref="assessment.type" delegate="FormatAssesmentType" tool="sakai.mneme" />
				</modelColumn>
				<selectionColumn multiple="TRUE">
					<value>
						<model ref="assessment.id" />
					</value>
					<model ref="ids.values" />
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="assessment-title" />
					</title>
					<model ref="assessment.title" />
					<entityNavigations>
						<navigation>
							<destination template="/test_edit/{0}">
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</entityNavigations>
				</modelColumn>
				<column>
					<title>
						<message selector="assessment-odate" />
					</title>
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.openDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-ddate" />
					</title>
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.dueDate" type="date" />
						</dateEdit>
					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="assessment-active" />
					</title>
					<model ref="assessment.active" delegate="FormatAssesmentActive" tool="sakai.mneme" />
				</modelColumn>
				<modelColumn>
					<model type="icon" icon="/icons/settings.png" />
					<entityNavigations>
						<navigation>
							<destination template="/test_settings/{0}">
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</entityNavigations>
				</modelColumn>
			</columns>
		</entityList>

	</container>
</interface>
