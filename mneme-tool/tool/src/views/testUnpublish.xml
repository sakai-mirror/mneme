<interface title="test-unpublish-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>


	<header>
		<message selector="test-unpublish-header">
			<model type="icon" icon="/icons/folder_page.jpg" />
		</message>
	</header>
	<container>
	<navigationBar />
		<alert>
			<message selector="unpublish-warning">
				<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
			</message>
			<included>
				<decision model="assessment.isLive" />
			</included>
		</alert>
		<entityDisplay>
			<rows>
				<row>
					<container>
						<text>
							<message selector="test-unpublish-message1" />
						</text>
					</container>
				</row>
				<row>
					<title>
						<message selector="delete-show-icon">
							<model type="icon" icon="/icons/warning.gif" />
						</message>
					</title>
					<container>
						<entityList style="FORM">
							<iterator name="test" model="tests" />
							<emptyTitle>
								<message selector="no-tests" />
							</emptyTitle>
							<columns>
								<modelColumn>
									<model ref="test.title" missing="no-title" />
								</modelColumn>
							</columns>

						</entityList>
						<text>
							<message selector="unpublish-instructions" />
						</text>
					</container>
				</row>
			</rows>
		</entityDisplay>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="ok" accessKey="ok-access" description="ok-description" style="BUTTON" submit="TRUE" destination="/assessments">
					<icon icon="/icons/OK.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
