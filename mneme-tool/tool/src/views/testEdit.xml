<interface title="testEdit-title" header="testEdit-header">
	<container>

		<entityDisplay title="test-properties">
			<rows>
				<row title="test-title">
					<container>
						<textEdit model="assessment.title" />
					</container>
				</row>
				<row title="open-date">
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.openDate" type="date" />
						</dateEdit>
					</container>
				</row>
				<row title="due-date">
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.dueDate" type="date" />
						</dateEdit>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<section title="test-parts">
			<container>

				<!-- the list of parts -->
				<entityList style="FLAT">
					<iterator name="part" model="assessment.parts.parts" />
					<emptyTitle>
						<message selector="no-parts" />
					</emptyTitle>
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model ref="part.id" />
							</value>
							<model ref="ids.values" />
						</selectionColumn>
						<modelColumn>
							<title>
								<message selector="part-title" />
							</title>
							<model ref="part.title" />
							<entityNavigations>
								<navigation>
									<destination template="/part_edit/{0}/{1}">
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</navigation>
							</entityNavigations>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-summary" />
							</title>
							<model ref="part" delegate="FormatPartSummary" tool="sakai.mneme" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-points" />
							</title>
							<model ref="part.totalPoints" />
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<text>
			<message selector="assessment-points">
				<model ref="assessment.parts.totalPoints" />
			</message>
		</text>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
