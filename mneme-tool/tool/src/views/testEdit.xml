<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="testEdit-header">
			<model type="icon" icon="/icons/edit.png" />
		</message>
	</header>
	<title>
		<message selector="testEdit-title" />
	</title>
	<container>
		<navigationBar/>
		<section>
			<container>
				<entityDisplay>
					<rows>
						<row title="test-title">
							<container>
								<textEdit rows="1" cols="25">
									<model ref="assessment.title" />
								</textEdit>
							</container>
						</row>
						<row title="type">
							<container>
								<!--  warn if live -->
								<alert>
									<message selector="live-warning-survey">
										<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
									</message>
									<included>
										<decision model="assessment.isLive" />
										<compareDecision model="assessment.type" constant="survey" />
									</included>
								</alert>
								<selection>
									<model ref="assessment.type" />
									<selectionChoices>
										<selectionChoice value="test" selector="assessment-type-test" />
										<selectionChoice value="assignment" selector="assessment-type-assignment" />
										<selectionChoice value="survey" selector="assessment-type-survey" />
									</selectionChoices>
									<readOnly>
										<decision model="assessment.isLive" />
										<compareDecision model="assessment.type" constant="survey" />
									</readOnly>
								</selection>
							</container>
						</row>
						<row title="test-instructions">
							<container>
								<entityDisplay>
									<rows>
										<row>
											<container>
												<htmlEdit model="assessment.presentation.text" />
											</container>
										</row>
										<row title="attachments">
											<container>
												<attachmentsEdit model="assessment.presentation.attachments" />
											</container>
										</row>
									</rows>
								</entityDisplay>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>
		<section>
			<container>
				<!--  warn if live -->
				<alert>
					<message selector="live-warning-parts">
						<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
					</message>
					<included>
						<decision model="assessment.isLive" />
					</included>
				</alert>

				<!-- the list of parts -->
				<entityList style="FLAT">
					<iterator name="part" model="assessment.parts.parts" />
					<emptyTitle>
						<message selector="no-parts" />
					</emptyTitle>
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model ref="part.id" />
							</value>
							<readOnly>
								<decision model="assessment.isLive" />
							</readOnly>
							<model ref="ids.values" />
							<!-- entity actions -->
							<entityActions>
								<!-- these two are not dependent, but put here for desired presentation order of actions -->
								<navigation destination="DRAW" title="random-draw" style="LINK" description="random-draw-description" submit="TRUE">
									<icon icon="/icons/hat_red.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
								<navigation destination="MANUAL" title="manual-draw" style="LINK" description="manual-draw-description"
									submit="TRUE">
									<icon icon="/icons/hand_select.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
								<!-- delete is dependent, and desired to go last  -->
								<navigation destination="/part_delete" selectRequirement="SOME" selectRequirementMessage="delete-failed-requirements"
									title="delete-part" style="LINK" description="part-delete-description" submit="TRUE">
									<icon icon="/icons/delete.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
							</entityActions>
						</selectionColumn>
						<orderColumn>
							<title>
								<message selector="part-order" />
							</title>
							<value>
								<model ref="part.id" />
							</value>
							<model ref="assessment.parts.order" />
							<included>
								<decision reversed="TRUE" model="assessment.isLive" />
							</included>
						</orderColumn>
						<modelColumn>
							<title>
								<message selector="part-title" />
							</title>
							<model ref="part.title" missing="no-title" />
							<entityNavigations>
								<navigation submit="TRUE">
									<destination template="/part_edit/{0}/{1}/{2}">
										<model ref="sortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</navigation>
							</entityNavigations>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-summary" />
							</title>
							<model ref="part" delegate="FormatPartSummary" tool="sakai.mneme" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-points" />
							</title>
							<model ref="part.totalPoints" />
						</modelColumn>
					</columns>
				</entityList>
			</container>
		</section>
		<text>
			<message selector="assessment-questions">
				<model ref="assessment.parts.numQuestions" />
			</message>
		</text>
		<text>
			<message selector="assessment-points">
				<model ref="assessment.parts.totalPoints" />
			</message>
		</text>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
		<finePrint>
			<message selector="test-Id">
				<model ref="assessment.id" />
			</message>
		</finePrint>
		<finePrint>
			<message selector="history-createText">
				<model type="userInfo" selector="DISPLAYNAME" ref="assessment.createdBy.UserId" />
				<model type="date" ref="assessment.createdBy.date" />
			</message>
		</finePrint>
		<finePrint>
			<message selector="history-modifyText">
				<model type="userInfo" selector="DISPLAYNAME" ref="assessment.modifiedBy.UserId" />
				<model type="date" ref="assessment.modifiedBy.date" />
			</message>
		</finePrint>
	</container>
</interface>
