<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="testEdit-header">
			<model type="icon" icon="/icons/document_add.png" />
		</message>
	</header>
	<title>
		<message selector="testEdit-title" />
	</title>
	<container>
		<section title="test-properties">
			<container>
				<entityDisplay>
					<rows>
						<row title="test-title">
							<container>
								<textEdit rows="1" cols="25">
									<model ref="assessment.title" />
								</textEdit>
							</container>
						</row>
						<row title="test-Id">
							<container>
								<text model="assessment.id" />
							</container>
						</row>
						<row title="history">
							<container>
								<text>
									<message selector="history-createText">
										<model type="userInfo" selector="DISPLAYNAME" ref="assessment.createdBy.UserId" />
										<model type="date" ref="assessment.createdBy.date" />
									</message>
								</text>
							</container>
						</row>
						<row>
							<container>
								<text>
									<message selector="history-modifyText">
										<model type="userInfo" selector="DISPLAYNAME" ref="assessment.modifiedBy.UserId" />
										<model type="date" ref="assessment.modifiedBy.date" />
									</message>
								</text>
							</container>
						</row>
						<row title="type">
							<container>
								<selection>
									<model ref="assessment.type" />
									<selectionChoices>
										<selectionChoice value="test" selector="type-test" />
										<selectionChoice value="assignment" selector="type-assignment" />
										<selectionChoice value="survey" selector="type-survey" />
									</selectionChoices>
								</selection>
							</container>
						</row>
						<row title="dates">
							<container>
								<entityDisplay>
									<rows>
										<row title="open-date">
											<container>
												<dateEdit>
													<model ref="assessment.dates.openDate" type="date" />
												</dateEdit>
											</container>
										</row>
										<row title="due-date">
											<container>
												<dateEdit>
													<model ref="assessment.dates.dueDate" type="date" />
												</dateEdit>
											</container>
										</row>
										<row title="test-acceptUntilDate">
											<container>
												<dateEdit>
													<model ref="assessment.dates.acceptUntilDate" type="date" />
												</dateEdit>
												<instructions selector="test-acceptUntilDateMsg" />
											</container>
										</row>
									</rows>
								</entityDisplay>
							</container>
						</row>
						<row title="test-instructions">
							<container>
								<entityDisplay>
									<rows>
										<row>
											<container>
												<htmlEdit model="assessment.presentation.text" />
											</container>
										</row>
										<row title="attachments">
											<container>
												<attachmentsEdit model="assessment.presentation.attachments" />
											</container>
										</row>
									</rows>
								</entityDisplay>
							</container>
						</row>
						<row title="honor-pledge">
							<container>
								<selection>
									<model ref="assessment.requireHonorPledge" />
								</selection>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>
		<section title="test-parts">
			<container>
				<!-- entity actions -->
				<entityActionBar width="50%">
					<container>
						<navigation destination="DRAW" title="random-draw" style="LINK" description="random-draw-description" submit="TRUE">
							<icon icon="/icons/hat_red.png" style="LEFT" />
						</navigation>
						<navigation destination="MANUAL" title="manual-draw" style="LINK" description="manual-draw-description" submit="TRUE">
							<icon icon="/icons/hand_select.png" style="LEFT" />
						</navigation>
						<navigation destination="/part_delete" title="delete-part" style="LINK" description="part-delete-description" submit="TRUE">
							<icon icon="/icons/delete.png" style="LEFT" />
						</navigation>
					</container>
				</entityActionBar>

				<!-- the list of parts -->
				<entityList style="FLAT">
					<iterator name="part" model="assessment.parts.parts" />
					<emptyTitle>
						<message selector="no-parts" />
					</emptyTitle>
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model ref="part.id" />
							</value>
							<model ref="ids.values" />
						</selectionColumn>
						<modelColumn>
							<title>
								<message selector="part-title" />
							</title>
							<model ref="part.title" missing="no-title" />
							<entityNavigations>
								<navigation submit="TRUE">
									<destination template="/part_edit/{0}/{1}">
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</navigation>
							</entityNavigations>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-summary" />
							</title>
							<model ref="part" delegate="FormatPartSummary" tool="sakai.mneme" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-points" />
							</title>
							<model ref="part.totalPoints" />
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<text>
			<message selector="assessment-points">
				<model type="icon" icon="/icons/grade.png" />
				<model ref="assessment.parts.totalPoints" />
			</message>
		</text>

		<text>
			<message selector="assessment-questions">
				<model type="icon" icon="/icons/basket_add.png" />
				<model ref="assessment.parts.numQuestions" />
			</message>
		</text>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="20em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
