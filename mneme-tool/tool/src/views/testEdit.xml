<interface>
	<header>
		<message selector="testEdit-header">
			<model type="icon" icon="/icons/add.png" />
		</message>
	</header>	
	<title>
		<message selector="testEdit-title"/>			
	</title>	
	<container>

		<entityDisplay title="test-properties">
			<rows>
				<row title="test-title">
					<container>
						<textEdit model="assessment.title" rows="1" cols="25" />
					</container>
				</row>
				<row title="test-Id">
					<container>
						<text model="assessment.id" />
					</container>
				</row>
				<row title="test-history">
					<container>
						<text>
							<message selector="test-history-text">
								<model type="userInfo" selector="DISPLAYNAME" ref="assessment.createdBy.UserId" />
								<model type="date" ref="assessment.createdBy.date" />
							</message>
						</text>
					</container>
				</row>
				<row title="type">
					<container>
						<selection>
							<model ref="assessment.type" />
							<selectionChoices>
								<selectionChoice value="test" selector="type-test" />
								<selectionChoice value="assignment" selector="type-assignment" />
								<selectionChoice value="survey" selector="type-survey" />
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row title="open-date">
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.openDate" type="date" />
						</dateEdit>
					</container>
				</row>
				<row title="due-date">
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.dueDate" type="date" />
						</dateEdit>
					</container>
				</row>
				<row title="test-acceptUntilDate">
					<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.dates.acceptUntilDate" type="date" />
						</dateEdit>
						<instructions selector="test-acceptUntilDateMsg" />
					</container>
				</row>
				<row title="test-instructions">
					<container>
						<textEdit model="assessment.presentation.text" />
					</container>
				</row>
				<row>
					<container>
						<attachments title="attachments">
							<model ref="assessment.presentation.attachments" />
						</attachments>
					</container>
				</row>
				<row title="honor-pledge">
					<container>
						<selection>
							<model ref="assessment.requireHonorPledge" />
						</selection>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<section title="test-parts">
			<container>
				<!-- entity actions -->
				<entityActionBar width="50%">
					<container>
						<navigation destination="/part_edit" title="random-draw" style="LINK" description="random-draw-description" submit="TRUE">
							<icon icon="/icons/hat_red.png" style="LEFT" />
						</navigation>
						<navigation destination="/part_edit" title="manual-draw" style="LINK" description="manual-draw-description" submit="TRUE">
							<icon icon="/icons/hand_select.png" style="LEFT" />
						</navigation>
						<navigation destination="" title="delete-part" style="LINK" description="part-delete-description" submit="TRUE">
							<icon icon="/icons/delete.png" style="LEFT" />
						</navigation>
					</container>
				</entityActionBar>
		
				<!-- the list of parts -->
				<entityList style="FLAT">
					<iterator name="part" model="assessment.parts.parts" />
					<emptyTitle>
						<message selector="no-parts" />
					</emptyTitle>
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model ref="part.id" />
							</value>
							<model ref="ids.values" />
						</selectionColumn>
						<modelColumn>
							<title>
								<message selector="part-title" />
							</title>
							<model ref="part.title" />
							<entityNavigations>
								<navigation>
									<destination template="/part_edit/{0}/{1}">
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</navigation>
							</entityNavigations>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-summary" />
							</title>
							<model ref="part" delegate="FormatPartSummary" tool="sakai.mneme" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="part-points" />
							</title>
							<model ref="part.totalPoints" />
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<text>
			<message selector="assessment-points">
				<model ref="assessment.parts.totalPoints" />
			</message>
		</text>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="20em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
