<interface title="test-invalid-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>


	<header>
		<message selector="test-invalid-header">
			<model type="icon" icon="/icons/folder_page.png" />
		</message>
	</header>
	<subHeader>
		<container>
			<text>
				<message>
					<model ref="assessment.title" missing="no-title" />
				</message>
			</text>
		</container>
	</subHeader>
	<container>
		<navigationBar />
		<alert>
			<message selector="invalid-warning"></message>
			<included>
				<decision reversed="TRUE" model="assessment.isValid" />
			</included>
		</alert>
		<section>
			<container>
				<instructions>
					<message selector="invalid-instructions"></message>
				</instructions>
			</container>
		</section>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="return-title" accessKey="return-access" description="return-description" style="BUTTON" submit="TRUE">
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
