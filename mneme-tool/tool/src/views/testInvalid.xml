<interface title="test-invalid-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>


	<header>
		<message selector="test-invalid-header">
			<model type="icon" icon="/icons/folder_page.png" />
		</message>
	</header>
	<container>
		<!--  warn if live -->
		<alert>
			<message selector="invalid-warning">
				<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
			</message>
			<included>
				<decision reversed="TRUE" model="assessment.isValid" />
			</included>
		</alert>

		<section>
			<container>
				<text>
					<message selector="title">
						<model ref="assessment.title" missing="no-title" />
					</message>
				</text>
			</container>
		</section>
		<section>
			<container>
				<instructions>
					<message selector="invalid-instructions"></message>
				</instructions>
			</container>
		</section>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="20em">
			<container>
				<navigation title="invalid" accessKey="invalid-access" description="invalid-description" style="BUTTON" submit="TRUE">
					<destination template="/assessment_edit/{0}{1}/{2}">
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model ref="assessment.id" />
					</destination>
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
