<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<!--  title & header -->
	<title>
		<message selector="testAccess-title">
			<model ref="assessment.title" missing="no-title" />
		</message>
	</title>
	<header>
		<message selector="testAccess-header">
			<model type="icon" icon="/icons/access.png" />
			<model ref="assessment.title" missing="no-title" />
		</message>
	</header>

	<container>

		<entityDisplay>
			<rows>
				<row title="dates">
					<container>
						<entityDisplay>
							<rows>
								<row title="open-date">
									<container>
										<dateEdit>
											<model ref="access.dates.openDate" type="date" />
										</dateEdit>
									</container>
								</row>
								<row title="due-date">
									<container>
										<dateEdit>
											<model ref="access.dates.dueDate" type="date" />
										</dateEdit>
									</container>
								</row>
								<row title="accept-until">
									<container>
										<dateEdit>
											<model ref="access.dates.acceptUntilDate" type="date" />
										</dateEdit>
									</container>
								</row>
							</rows>
						</entityDisplay>
					</container>
				</row>
				<row title="timeLimit">
					<container>
						<selection orientation="VERTICAL">
							<model ref="access.hasTimeLimit" />
							<selectionChoices>
								<selectionChoice value="false" selector="no-time-limit" />
								<selectionChoice value="true" selector="time-limit">
									<container>
										<durationEdit>
											<model ref="access.timeLimit" type="duration" />
										</durationEdit>
									</container>
								</selectionChoice>
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row title="allowTries">
					<container>
						<selection orientation="VERTICAL">
							<model ref="access.hasTries" />
							<selectionChoices>
								<selectionChoice value="false" selector="no-tries" />
								<selectionChoice value="true" selector="tries">
									<container>
										<countEdit>
											<model ref="access.tries" type="count" />
										</countEdit>
									</container>
								</selectionChoice>
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row title="password">
					<container>
						<textEdit rows="1" cols="16">
							<model ref="access.password.password" />
						</textEdit>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="100%">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessment_special/{0}/{1}">
						<model ref="sort" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/assessment_special/{0}/{1}">
						<model ref="sort" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

		<entityDisplay>
			<rows>
				<row title="id">
					<container>
						<text model="assessment.id" />
					</container>
				</row>
			</rows>
		</entityDisplay>

	</container>
</interface>
