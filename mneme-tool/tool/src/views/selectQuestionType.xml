<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="select-question-type-header">
			<model type="icon" icon="/icons/add_qst.png" />
		</message>
	</header>
	<title>
		<message selector="select-question-type-title" />
	</title>

	<container>
		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="continue-title" style="BUTTON" accessKey="continue-access" description="continue-description" submit="TRUE">
					<destination template="/">
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="{0}">
						<model ref="prevDestination" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
