<interface title="testSettings-title" header="testSettings-header">
	<container>

		<entityDisplay>
			<rows>
				<row title="title">
					<container>
						<text model="assessment.title" />
					</container>
				</row>
				<row title="nav">
					<container>
						<selection orientation="VERTICAL">
							<model ref="assessment.randomAccess" />
							<selectionChoices>
								<selectionChoice value="true" selector="type-flex" />
								<selectionChoice value="false" selector="type-strict" />
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row title="id">
					<container>
						<text model="assessment.id" />
					</container>
				</row>
				<row title="timeLimit">
				<container>
						<dateEdit>
							<icon icon="/icons/date.png" message="edit-date" />
							<model ref="assessment.timeLimit" type="date" />
						</dateEdit>
					</container>
				</row>
                <row title="allowTries">
					<container>
						<selection orientation="VERTICAL">
							<model ref="assessment.numSubmissionsAllowed" />
							<selectionChoices>
								<selectionChoice value="1" selector="type-unlimited" />
								<selectionChoice value="10" selector="type-number" />
							</selectionChoices>
						</selection>
					</container>
				</row>	
				<row title="layout">
					<container>
						<selection orientation="VERTICAL">
							<model ref="assessment.questionGrouping" />
							<selectionChoices>
								<selectionChoice value="question" selector="type-question" />
								<selectionChoice value="part" selector="type-part" />
								<selectionChoice value="assessment" selector="type-assessment" />
							</selectionChoices>
						</selection>
					</container>
				</row>		
                <row title="partSettings">
					<container>
						<selection title="showEachPart">
							<model ref="assessment.parts.showPresentation" />
							<selectionChoices>
								<selectionChoice value="true" selector="type-yes" />
								<selectionChoice value="false" selector="type-no" />
							</selectionChoices>
						</selection>
					</container>
				</row>		
                <row>
					<container>
						<selection title="numbering">
							<model ref="assessment.parts.continuousNumbering" />
							<selectionChoices>
								<selectionChoice value="true" selector="type-continuous" />
								<selectionChoice value="false" selector="type-restart" />
							</selectionChoices>
						</selection>
					</container>
				</row>	
                <row title="reviewOptions">
					<container>
						<selection>
							<model ref="assessment.review.timing" />
							<selectionChoices>
								<selectionChoice value="submitted" selector="type-submitted" />
								<selectionChoice value="graded" selector="type-graded" />
								<selectionChoice value="date" selector="type-date" />
								<selectionChoice value="never" selector="type-never" />
							</selectionChoices>
						</selection>
					</container>
				</row>																		
                <row>	
					<container>
						<selection title="showAnswerKey">
							<model ref="assessment.review.showCorrectAnswer" />
						</selection>
					</container>
				</row>         
				<row>	
					<container>
						<selection title="showFeedback">
							<model ref="assessment.review.showFeedback" />
						</selection>
					</container>
				</row>      
				<row title="gradeOptions">
					<container>
						<selection title="studentid" orientation="VERTICAL">
							<model ref="assessment.grading.showIdentities" />
							<selectionChoices>
								<selectionChoice value="true" selector="type-yes" />
								<selectionChoice value="false" selector="type-no" />
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row>	
					<container>
						<selection title="releasegrades" orientation="VERTICAL">
							<model ref="assessment.grading.autoRelease" />
							<selectionChoices>
								<selectionChoice value="true" selector="type-auto" />
								<selectionChoice value="false" selector="type-manual" />
							</selectionChoices>
						</selection>
					</container>
				</row>
				<row>	
					<container>
						<selection title="sendgbook">
							<model ref="assessment.grading.gradebookIntegration" />
						</selection>
					</container>
				</row>
               		
				<row title="submitMessage">
					<container>
						<textEdit model="assessment.submitPresentation.text" />
					</container>
				</row>
			</rows>
		</entityDisplay>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
