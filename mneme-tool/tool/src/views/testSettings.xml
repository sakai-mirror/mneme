<interface title="testSettings-title" header="testSettings-header">
	<container>

		<entityDisplay>
			<rows>
				<row title="title">
					<container>
						<text model="assessment.title" />
					</container>
				</row>
				<row title="id">
					<container>
						<text model="assessment.id" />
					</container>
				</row>
				<row title="timeLimit">
					<container>
						<textEdit rows="1" cols="10">
							<model type="duration" ref="assessment.timeLimit" concise="TRUE" />
						</textEdit>
					</container>
				</row>
				<row title="submitMessage">
					<container>
						<textEdit model="assessment.submitPresentation.text" />
					</container>
				</row>
			</rows>
		</entityDisplay>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/tests">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON" destination="/tests">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
