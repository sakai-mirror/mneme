<interface>
	<header>
		<message selector="copy-move-header">
			<model type="icon" icon="/icons/page_go.png" />
			<model ref="headerText" />
		</message>
	</header>
	<title>
		<message selector="questions-copy-move-title" />
	</title>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<container>
		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="FALSE">
					<value>
						<model type="text" ref="pool.id" />
					</value>
					<model ref="poolids.values" />
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="pool-subject" />
					</title>
					<model ref="pool.subject" missing="missing-subject" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-title" />
					</title>
					<model ref="pool.title" missing="no-title" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-description" />
					</title>
					<model ref="pool.description" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.numQuestions" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-points" />
					</title>
					<model ref="pool.points" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-difficulty" />
					</title>
					<model ref="pool.difficulty" />
				</modelColumn>
			</columns>
		</entityList>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation destination="/" title="continue-title" style="BUTTON" accessKey="continue-access" description="continue-description"
					submit="FALSE">
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/pool_edit/{0}">
						<model ref="poolid" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
