<interface>
	<header>
		<message selector="copy-move-header">
			<model type="icon" ref="headerIcon" />
			<model ref="headerText" />
		</message>
	</header>
	<title>
		<message selector="questions-copy-move-title" />
	</title>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<container>
		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="FALSE" id="SELECTION">
					<value>
						<model type="text" ref="pool.id" />
					</value>
					<model ref="selectedPoolId.value" />
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="pool-title" />
					</title>
					<model ref="pool.title" missing="no-title" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="{0}/0A">
								<model ref="saveDestination" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="{0}/0D">
								<model ref="saveDestination" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-description" />
					</title>
					<model ref="pool.description" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.numQuestions" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-points" />
					</title>
					<model ref="pool.points" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-difficulty" />
					</title>
					<model ref="pool.difficulty" />
				</modelColumn>
			</columns>
		</entityList>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="continue-title" style="BUTTON" accessKey="continue-access" description="continue-description" submit="TRUE"
					selectRequirement="SINGLE" selectRequirementId="SELECTION" selectRequirementMessage="continue-failed-requirements">
					<destination template="{0}">
						<model ref="saveDestination" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/pool_edit/{0}/{1}/{2}/{3}/{4}">
						<model ref="poolsSortCode" />
						<model ref="poolsPagingParameter" />
						<model ref="poolid" />
						<model ref="poolsEditSortCode" />
						<model ref="poolsEditPagingParameter" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
