<interface title="delete-confirm-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	
	<header>
		<message selector="delete-confirm-header">
			<model type="icon" icon="/icons/delete.png" />
		</message>
	</header>
	
	<container>
		<entityDisplay>
			<rows>
				<row>
					<container>
						<text>
							<message selector="delete-message1" />
						</text>
					</container>
				</row>
				<row>
					<title>
						<message selector="delete-show-icon">
							<model type="icon" icon="/icons/warning.gif" />
						</message>
					</title>
					<container>
						<!-- the list of pools -->
						<entityList style="FORM">
							<iterator name="pool" model="pools" />
							<emptyTitle>
								<message selector="no-pools" />
							</emptyTitle>
							<columns>
								<modelColumn>
									<model ref="pool.title" missing="no-title" />
								</modelColumn>
							</columns>

						</entityList>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation destination="/pools_delete" title="ok" style="BUTTON" accessKey="ok-access" description="ok-description"
					submit="TRUE">
					<icon icon="/icons/correct.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/pools/{0}/{1}">
						<model ref="sortcode" />
						<model ref="pagingParameter" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
