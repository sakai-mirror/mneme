<interface title="pools-delete-confirm-title"
	header="pools-delete-confirm-header">
	<!--mode bar-->
	<modeBar>
		<container>
			<navigation destination="/list"
				title="test-manager-nav-title" style="LINK"
				accessKey="test-manager-nav-access-key"
				description="test-manager-nav-description" />
			<navigation destination="/grading" title="grading-nav-title"
				style="LINK" accessKey="grading-nav-access-key"
				description="grading-nav-description" />
			<navigation destination="/pools" title="pools-nav-title"
				style="LINK" accessKey="pools-nav-access-key"
				description="pools-nav-description" disabled="TRUE" />
			<navigation destination="/studentview"
				title="student-view-nav-title" style="LINK"
				accessKey="student-view-nav-access-key"
				description="student-view-nav-description" />
		</container>
	</modeBar>
	<container>
		<!--navigation-->
		<navigationBar width="100%" />

		<text>
			<message selector="pool-delete-message1" />
		</text>

		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<modelColumn>
					<model ref="pool.title" />
				</modelColumn>
			</columns>

		</entityList>


		<text>
			<message selector="pool-delete-alert" />
		</text>

		<text>
			<message selector="pool-delete-message2" />
		</text>

		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation destination="/pools_delete"
					title="continue-title" style="LINK"
					description="continue-description" submit="TRUE">
				</navigation>
				<navigation destination="/pools" title="cancel-title"
					style="LINK" description="cancel-description">
					<!--icon icon="/icons/cancel.gif" style="LEFT" /-->
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
