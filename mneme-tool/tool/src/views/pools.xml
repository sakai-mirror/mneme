<interface title="pools-title" header="pools-header">
	<!--mode bar-->
	<modeBar>
		<container>
			<navigation destination="/tests"
				title="test-manager-nav-title" style="LINK"
				accessKey="test-manager-nav-access-key"
				description="test-manager-nav-description" />
			<navigation destination="/grades" title="grading-nav-title"
				style="LINK" accessKey="grading-nav-access-key"
				description="grading-nav-description" />
			<navigation destination="/pools" title="pools-nav-title"
				style="LINK" accessKey="pools-nav-access-key"
				description="pools-nav-description" disabled="TRUE" />
			<navigation destination="/list"
				title="student-view-nav-title" style="LINK"
				accessKey="student-view-nav-access-key"
				description="student-view-nav-description" />
		</container>
	</modeBar>
	<container>

		<text>
			<message selector="pool-list-page-nav" />
		</text>

		<!--entity actions-->
		<entityActionBar width="100%">
			<container>
				<navigation destination="/pools_add" title="add-pool-title"
					style="LINK" description="add-pool-description">
					<icon icon="/icons/add.png" style="LEFT" />
				</navigation>
				<navigation destination="/" title="add-question-title"
					style="LINK" description="add-question-description">
					<icon icon="/icons/add.png" style="LEFT" />
				</navigation>
				<navigation destination="/" title="combine-title"
					style="LINK" description="combine-description" disabled="FALSE">
					<icon icon="/icons/combine_pools.png" style="LEFT" />
				</navigation>
				<navigation destination="/" title="import-export-title"
					style="LINK" description="import-export-description">
					<icon icon="/icons/import_export.png" style="LEFT" />
				</navigation>
				<navigation destination="/pools_delete"
					title="delete-title" style="LINK" description="delete-description"
					submit="TRUE">
					<icon icon="/icons/delete.png" style="LEFT" />
				</navigation>
				<navigation destination="/" title="search-title"
					style="LINK" description="search-description">
					<icon icon="/icons/search.png" style="LEFT" />
				</navigation>
				<!--textEdit rows="1" cols="30" /-->
				<navigation destination="/" style="LINK"
					description="gotofirst-description">
					<icon icon="/icons/first.png" style="LEFT" />
				</navigation>
				<navigation destination="/" style="LINK"
					description="gotoprev-description">
					<icon icon="/icons/previous.png" style="LEFT" />
				</navigation>
				<navigation destination="/" style="LINK"
					description="gotonext-description">
					<icon icon="/icons/next.png" style="LEFT" />
				</navigation>
				<navigation destination="/" style="LINK"
					description="gotolast-description">
					<icon icon="/icons/last.png" style="LEFT" />
				</navigation>
			</container>
		</entityActionBar>

		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="pool.id" />
					</value>
					<model ref="poolids.values" />
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="pool-subject" />
					</title>
					<model ref="pool.subject" />
					<sort>
						<active>
							<compareDecision model="sort_column"
								constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction"
								constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pools/0A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pools/0D" />
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-title" />
					</title>
					<model ref="pool.title" />
					<sort>
						<active>
							<compareDecision model="sort_column"
								constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction"
								constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pools/1A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pools/1D" />
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-description" />
					</title>
					<model ref="pool.description" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.numQuestions" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-points" />
					</title>
					<!-- model ref="pool.points" /-->
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-difficulty" />
					</title>
					<model ref="pool.difficulty" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-action" />
					</title>
					<navigations>
						<navigation style="LINK" title="">
							<destination template="/" model="pool.id" />
							<icon icon="/icons/edit.png" style="LEFT" />
						</navigation>
						<navigation style="LINK">
							<destination template="/" model="pool.id" />
							<icon icon="/icons/copy.png" style="RIGHT" />
						</navigation>
					</navigations>
				</modelColumn>
			</columns>
		</entityList>

	</container>
</interface>
