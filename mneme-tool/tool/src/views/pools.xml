<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="pools-header">
			<model type="icon" icon="/icons/basket_add.png" />
		</message>
	</header>
	<title>
		<message selector="pools-title" />
	</title>

	<container>
		<!--text>
			<message selector="pool-list-page-nav" />
			</text-->

		<!--entity actions-->
		<entityActionBar width="100%">
			<container>
				<navigation title="add-pool-title" style="LINK" description="add-pool-description" submit="TRUE">
					<icon icon="/icons/document_add.png" style="LEFT" />
					<destination template="/pool_properties/{0}{1}/{2}">
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model ref="pagingParameter" />
					</destination>
				</navigation>
				<navigation submit="TRUE" style="LINK" description="add-question-description">
					<title>
						<message selector="add-question-title">
							<model ref="type.typeName" />
						</message>
					</title>
					<destination template="ADDQ:{0}">
						<model ref="type.type" />
					</destination>
					<iterator name="type" model="questionTypes" />
					<icon icon="/icons/document_add.png" style="LEFT" />
				</navigation>
				<navigation title="combine-title" style="LINK" description="combine-description" disabled="FALSE" submit="TRUE">
					<icon icon="/icons/combine_pools.png" style="LEFT" />
					<destination template="/COMBINE/{0}{1}/{2}">
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model ref="pagingParameter" />
					</destination>
				</navigation>
				<navigation destination="/" title="import-export-title" style="LINK" description="import-export-description">
					<icon icon="/icons/import_export.png" style="LEFT" />
				</navigation>
				<navigation title="delete-title" style="LINK" description="delete-description" submit="TRUE">
					<icon icon="/icons/delete.png" style="LEFT" />
					<destination template="/pools_delete/{0}{1}/{2}">
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model ref="pagingParameter" />
					</destination>
				</navigation>
				<navigation destination="/" title="search-title" style="LINK" description="search-description">
					<icon icon="/icons/search.png" style="LEFT" />
				</navigation>

				<pager paging="paging">
					<destination template="/pools/{0}{1}/{2}">
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model type="paging" ref="paging" />
					</destination>
				</pager>

			</container>
		</entityActionBar>

		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="pool.id" />
					</value>
					<model ref="poolids.values" />
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="pool-subject" />
					</title>
					<model ref="pool.subject" missing="missing-subject" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pools/0A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pools/0D" />
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-title" />
					</title>
					<model ref="pool.title" missing="no-title" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pools/1A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pools/1D" />
						</desc>
					</sort>
					<entityNavigations>
						<navigation>
							<!--destination template="/pool_edit/{0}">
								<model ref="pool.id" />
								</destination-->
							<destination template="/pool_edit/{0}{1}/{2}/{3}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
								<model ref="pool.id" />
							</destination>
						</navigation>
					</entityNavigations>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-description" />
					</title>
					<model ref="pool.description" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.numQuestions" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-points" />
					</title>
					<model ref="pool.points" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-difficulty" />
					</title>
					<model ref="pool.difficulty" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-action" />
					</title>
					<navigations>
						<navigation style="LINK">
							<icon icon="/icons/edit.png" style="LEFT" />
							<!--destination template="/pool_properties/{0}">
								<model ref="pool.id" />
								</destination-->
							<destination template="/pool_properties/{0}{1}/{2}/{3}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
								<model ref="pool.id" />
							</destination>
						</navigation>
						<navigation style="LINK" submit="TRUE">
							<icon icon="/icons/copy.png" style="RIGHT" />
							<destination template="/pool_duplicate/{0}">
								<model ref="pool.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
			</columns>
		</entityList>

	</container>
</interface>
