<interface title="pools-title" header="pools-header">
	<!--mode bar-->
	<modeBar>
		<container>
			<navigation destination="/list" title="test-manager-nav-title" style="LINK" accessKey="test-manager-nav-access-key" description="test-manager-nav-description"/>
			<navigation destination="/grading" title="grading-nav-title" style="LINK" accessKey="grading-nav-access-key" description="grading-nav-description"/>
			<navigation destination="/pools" title="pools-nav-title" style="LINK" accessKey="pools-nav-access-key" description="pools-nav-description" disabled="TRUE"/>
			<navigation destination="/studentview" title="student-view-nav-title" style="LINK" accessKey="student-view-nav-access-key" description="student-view-nav-description"/>
		</container>
	</modeBar>
	<container>
		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation destination="/" title="add-pool-title" style="LINK" description="add-pool-description">
					<icon icon="/icons/add.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="add-question-title" style="LINK" description="add-question-description">
					<icon icon="/icons/add.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="combine-title" style="LINK" description="combine-description" disabled="FALSE">
					<icon icon="/icons/combine_pools.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="import-export-title" style="LINK" description="import-export-description">
					<icon icon="/icons/import_export.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="delete-title" style="LINK" description="delete-description">
					<icon icon="/icons/delete.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="search-title" style="LINK" description="search-description">
					<icon icon="/icons/search.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="gotofirst-title" style="LINK" description="gotofirst-description">
					<icon icon="/icons/first.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="gotoprev-title" style="LINK" description="gotoprev-description">
					<icon icon="/icons/previous.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="gotonext-title" style="LINK" description="gotonext-description">
					<icon icon="/icons/next.png" style="LEFT"/>
				</navigation>
				<navigation destination="/" title="gotolast-title" style="LINK" description="gotolast-description">
					<icon icon="/icons/last.png" style="LEFT"/>
				</navigation>
			</container>
		</navigationBar>
		
		<!-- the list of pools -->
		<entityList style="FLAT">
			<iterator name="pool" model="pools" />
			<emptyTitle>
				<message selector="no-pools" />
			</emptyTitle>
			<columns>
				<modelColumn>
					<title>
						<message selector="pool-subject" />
					</title>
					<model ref="pool.subject" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-title" />
					</title>
					<model ref="pool.title" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-description" />
					</title>
					<model ref="pool.description" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.numQuestions" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-questions" />
					</title>
					<model ref="pool.points" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="pool-difficulty" />
					</title>
					<model ref="pool.difficulty" />
				</modelColumn>
				<column>
					<title>
						<message selector="pool-action" />
					</title>
				</column>
			</columns>
		</entityList>

	</container>
</interface>
