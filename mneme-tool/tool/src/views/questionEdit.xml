<interface>
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<!-- title -->
	<title>
		<message selector="question-edit-title" />
	</title>

	<!-- header -->
	<header>
		<message selector="question-edit-header">
			<model type="icon" icon="/icons/basket_add.png" />
			<model ref="question.description" missing="no-title" />
		</message>
	</header>

	<subHeader>
		<container>
			<text model="question.pool.title" missing="no-title" />
			<text selector="blank" />
			<text selector="pool-points" model="question.pool.points" />
			<text selector="pool-difficulty" model="question.pool.difficulty" />
		</container>
	</subHeader>

	<container>

		<navigationBar />

		<entityDisplay>
			<rows>

				<row title="question-type">
					<container>
						<text model="question.typeName" />
					</container>
				</row>

				<row>
					<container>
						<entityDisplay>
							<rows>
								<row title="question-presentation">
									<container>
										<htmlEdit model="question.presentation.text" />
									</container>
								</row>
								<row title="attachments">
									<container>
										<attachmentsEdit model="question.presentation.attachments" />
									</container>
								</row>
							</rows>
						</entityDisplay>
					</container>
					<included>
						<decision model="question.typeSpecificQuestion.useQuestionPresentation" />
					</included>
				</row>

				<!-- question specific -->
				<row>
					<container>
						<modelComponent model="question.typeSpecificQuestion.authoringUi" />
					</container>
				</row>

				<row title="optional-settings">
					<container>
						<section>
							<title>
								<message selector="reason-title">
									<model type="icon" icon="/icons/reason.png" />
								</message>
							</title>
							<container>
								<selection title="reason-description">
									<model ref="question.explainReason" />
								</selection>
							</container>
							<included>
								<decision model="question.typeSpecificQuestion.useReason" />
							</included>
						</section>
						<section>
							<title>
								<message selector="hints-title">
									<model type="icon" icon="/icons/hints.png" />
								</message>
							</title>
							<container>
								<htmlEdit title="hints-description">
									<model ref="question.hints" />
								</htmlEdit>
							</container>
							<included>
								<decision model="question.typeSpecificQuestion.useHints" />
							</included>
						</section>
						<section>
							<title>
								<message selector="feedback-title">
									<model type="icon" icon="/icons/feedback.png" />
								</message>
							</title>
							<container>
								<htmlEdit title="feedback-description">
									<model ref="question.feedback" />
								</htmlEdit>
							</container>
							<included>
								<decision model="question.typeSpecificQuestion.useFeedback" />
							</included>
						</section>
					</container>
				</row>

			</rows>
		</entityDisplay>

		<!-- navigation -->
		<navigationBar>
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<destination template="/pool_edit/{0}">
						<model ref="extras" />
					</destination>
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="add" accessKey="add-access" description="add-description" style="BUTTON" submit="TRUE">
					<destination template="/select_question_type/{0}">
						<model ref="extras" />
					</destination>
					<icon icon="/icons/add.png" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

		<finePrint selector="id-display" model="question.id" />
		<finePrint>
			<message selector="history-createText">
				<model type="userInfo" selector="DISPLAYNAME" ref="question.createdBy.userId" />
				<model type="date" ref="question.createdBy.date" />
			</message>
		</finePrint>
		<finePrint>
			<message selector="history-modifyText">
				<model type="userInfo" selector="DISPLAYNAME" ref="question.modifiedBy.userId" />
				<model type="date" ref="question.modifiedBy.date" />
			</message>
		</finePrint>
	</container>

</interface>
