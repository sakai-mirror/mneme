<interface title="delete-confirm-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="delete-confirm-header">
			<model type="icon" icon="/icons/delete.png" />
		</message>
	</header>

	<container>
		<navigationBar />
		<entityDisplay>
			<rows>
				<row>
					<container>
						<text>
							<message selector="test-delete-message1" />
						</text>
					</container>
				</row>
				<row>
					<title>
						<message selector="delete-show-icon">
							<model type="icon" icon="/icons/warning.png" />
						</message>
					</title>
					<container>
						<entityList style="FORM">
							<iterator name="test" model="tests" />
							<emptyTitle>
								<message selector="no-tests" />
							</emptyTitle>
							<columns>
								<modelColumn>
									<model ref="test.title" missing="no-title" />
								</modelColumn>
							</columns>

						</entityList>
					</container>
				</row>
				<row>
					<container>
						<text>
							<message selector="test-nodelete-message" />
							<included>
								<hasValueDecision model="nodeltests" />
							</included>
						</text>
					</container>
				</row>
				<row>
					<container>
						<!-- the list of tests -->
						<entityList style="FORM">
							<iterator name="test" model="nodeltests" />
							<included>
								<hasValueDecision model="nodeltests" />
							</included>

							<emptyTitle>
								<message selector="no-tests" />
							</emptyTitle>
							<columns>
								<modelColumn>
									<model ref="test.title" missing="no-title" />
								</modelColumn>
							</columns>

						</entityList>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="ok" style="BUTTON" accessKey="ok-access" description="ok-description" submit="TRUE">
					<icon icon="/icons/OK.png" style="LEFT" />
					<destination template="/assessments_delete/{0}">
						<model ref="sortcode" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
