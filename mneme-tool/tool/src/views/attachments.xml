<interface popup="TRUE">

	<title>
		<message selector="attachments-title" />
	</title>

	<header>
		<message selector="attachments-header">
			<model type="icon" icon="/icons/folder_page.png" />
			<model ref="title" />
		</message>
	</header>

	<container>

		<section>

			<included>
				<hasValueDecision model="tempName" reversed="TRUE" />
			</included>

			<title highlighted="TRUE">
				<message selector="upload-instructions" />
			</title>

			<container>

				<!-- upload -->
				<instructions>
					<message selector="upload-title" />
					<included>
						<hasValueDecision model="tempName" reversed="TRUE" />
					</included>
				</instructions>
				<fileUpload>
					<upload>
						<message selector="upload-button" />
					</upload>
					<model ref="upload.upload" />
					<included>
						<hasValueDecision model="tempName" reversed="TRUE" />
					</included>
				</fileUpload>
				
			</container>
		</section>

		<!-- temporary file resolution-->
		<section>

			<included>
				<hasValueDecision model="tempName" />
			</included>

			<title highlighted="TRUE">
				<message selector="upload-resolve" model="tempName" />
			</title>

			<container>

				<instructions>
					<message selector="upload-resolve-instructions" model="tempName" />
					<included>
						<hasValueDecision model="tempName" />
					</included>
				</instructions>

				<entityList style="FLAT">
					<iterator name="row">
						<model ref="tempAttachments.rows" />
					</iterator>
					<columns>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRUE">
									<title>
										<message>
											<model type="image" ref="row.col01.thumbUrl">
												<caption>
													<message selector="uploaded-file" />
												</caption>
											</model>
										</message>
									</title>
									<destination template="REPLACE" />
								</navigation>
							</container>
						</column>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRUE">
									<title>
										<message>
											<model type="image" ref="row.col02.thumbUrl">
												<caption>
													<message selector="existing-file" />
												</caption>
											</model>
										</message>
									</title>
									<destination template="DISCARD" />
								</navigation>
							</container>
						</column>

					</columns>
				</entityList>

			</container>
		</section>

		<section>

			<included>
				<hasValueDecision model="tempName" reversed="TRUE" />
			</included>

			<title highlighted="TRUE">
				<message selector="pick-instructions" />
			</title>

			<container>

				<!-- the list of attachments -->
				<entityList style="FLAT">
					<iterator name="row">
						<model ref="attachments.rows" />
					</iterator>
					<emptyTitle>
						<message selector="no-attachments" />
					</emptyTitle>
					<columns>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model type="image" ref="row.col01.thumbUrl">
												<caption>
													<message>
														<model ref="row.col01.name" />
													</message>
												</caption>
											</model>
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col01.url" />
									</destination>
									<included>
										<hasValueDecision model="row.col01.thumbUrl" />
									</included>
								</navigation>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model ref="row.col01.name" />
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col01.url" />
									</destination>
									<included>
										<hasValueDecision reversed="TRUE" model="row.col01.thumbUrl" />
									</included>
								</navigation>
							</container>
						</column>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model type="image" ref="row.col02.thumbUrl">
												<caption>
													<message>
														<model ref="row.col02.name" />
													</message>
												</caption>
											</model>
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col02.url" />
									</destination>
									<included>
										<hasValueDecision model="row.col02.thumbUrl" />
									</included>
								</navigation>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model ref="row.col02.name" />
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col02.url" />
									</destination>
									<included>
										<hasValueDecision reversed="TRUE" model="row.col02.thumbUrl" />
									</included>
								</navigation>
							</container>
						</column>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model type="image" ref="row.col03.thumbUrl">
												<caption>
													<message>
														<model ref="row.col03.name" />
													</message>
												</caption>
											</model>
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col03.url" />
									</destination>
									<included>
										<hasValueDecision model="row.col03.thumbUrl" />
									</included>
								</navigation>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model ref="row.col03.name" />
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col03.url" />
									</destination>
									<included>
										<hasValueDecision reversed="TRUE" model="row.col03.thumbUrl" />
									</included>
								</navigation>
							</container>
						</column>

						<column centered="TRUE" bottomed="TRUE">
							<container>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model type="image" ref="row.col04.thumbUrl">
												<caption>
													<message>
														<model ref="row.col04.name" />
													</message>
												</caption>
											</model>
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col04.url" />
									</destination>
									<included>
										<hasValueDecision model="row.col04.thumbUrl" />
									</included>
								</navigation>
								<navigation style="LINK" submit="TRIGGER">
									<title>
										<message>
											<model ref="row.col04.name" />
										</message>
									</title>
									<destination template="ambrosiaChooseAttachment('{0}');">
										<model ref="row.col04.url" />
									</destination>
									<included>
										<hasValueDecision reversed="TRUE" model="row.col04.thumbUrl" />
									</included>
								</navigation>
							</container>
						</column>

					</columns>
				</entityList>

				<!-- navigations -->
				<navigationBar id="nav">
					<container>
						<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRIGGER">
							<destination template="ambrosiaDoneAttachments();" />
							<icon icon="/icons/return.png" style="LEFT" />
						</navigation>
					</container>
				</navigationBar>
			</container>
		</section>

	</container>
</interface>
