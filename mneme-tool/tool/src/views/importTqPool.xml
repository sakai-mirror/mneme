<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="import-tq-pool-title" />
	</title>

	<header>
		<message selector="import-tq-pool-header">
			<model type="icon" icon="/icons/import_export.png" />
		</message>
	</header>

	<container>

		<navigationBar>
			<container>
				<text>
					<message selector="select-pools" />
				</text>
			</container>
		</navigationBar>

		<section>
			<container>

				<selection>
					<title>
						<message selector="select-all" />
					</title>
					<model ref="selectedPools.values" />
					<singleSelect>
						<decision type="true" reversed="TRUE" />
					</singleSelect>
					<selectionModel model="pools" name="pool">
						<valueMessage>
							<message model="pool.id" />
						</valueMessage>
						<displayMessage>
							<message model="pool.description" type="text" />
						</displayMessage>
					</selectionModel>
				</selection>

			</container>
		</section>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="ok" style="BUTTON" accessKey="ok-access" description="ok-description" submit="TRUE">
					<icon icon="/icons/OK.png" style="LEFT" />
					<destination template="IMPORT" />
				</navigation>
				<divider />
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/pools/{0}">
						<model ref="poolsSort" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
