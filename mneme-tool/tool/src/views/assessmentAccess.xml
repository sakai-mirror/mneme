<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<!--  title & header -->
	<title>
		<message selector="testAccess-title">
			<model ref="assessment.title" missing="no-title" />
		</message>
	</title>

	<header>
		<message selector="testAccess-header">
			<model type="icon" icon="/icons/access.png" />
		</message>
	</header>

	<subHeader>
		<container>
			<text>
				<message>
					<model ref="assessment.title" missing="no-title" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<!-- top nav bar (empty, used as frame) -->
		<navigationBar />

		<section>
			<container>

				<selection orientation="DROPDOWN" height="5" title="users">
					<singleSelect>
						<decision type="true" reversed="TRUE" />
					</singleSelect>
					<model ref="access.users" />
					<selectionModel name="user" model="assessment.submitUsers" value="user.id" display="user.sortName" />
				</selection>
				<dateEdit title="open-date">
					<model ref="access.openDate" type="date" />
				</dateEdit>
				<dateEdit title="due-date">
					<model ref="access.dueDate" type="date" />
				</dateEdit>
				<dateEdit title="accept-until">
					<model ref="access.acceptUntilDate" type="date" />
				</dateEdit>
				<selection title="timeLimit">
					<model ref="access.hasTimeLimit" />
					<selectionChoices>
						<selectionChoice value="false" selector="no-time-limit" />
						<selectionChoice value="true" selector="time-limit">
							<container>
								<durationEdit>
									<model ref="access.timeLimit" type="duration" />
								</durationEdit>
							</container>
						</selectionChoice>
					</selectionChoices>
					<included>
						<decision model="assessment.hasTimeLimit" />
					</included>
				</selection>
				<selection title="allowTries">
					<model ref="access.hasTriesLimit" />
					<selectionChoices>
						<selectionChoice value="false" selector="no-tries" />
						<selectionChoice value="true" selector="tries">
							<container>
								<countEdit>
									<model ref="access.tries" type="count" />
									<minValue>
										<model type="constant" value="1" />
									</minValue>
								</countEdit>
							</container>
						</selectionChoice>
					</selectionChoices>
				</selection>
				<textEdit rows="1" cols="16">
					<title>
						<message selector="password">
							<model type="icon" icon="/icons/door_in.png" />
						</message>
					</title>
					<model ref="access.passwordValue" />
				</textEdit>

				<!-- navigation -->
				<navigationBar id="nav">
					<container>
						<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
							<icon icon="/icons/return.png" style="LEFT" />
							<destination template="/assessment_special/{0}/{1}">
								<model ref="sort" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</container>
				</navigationBar>

			</container>
		</section>

	</container>

	<footer>
		<container>
			<finePrint selector="id-display" model="access.id" />
		</container>
	</footer>

</interface>
