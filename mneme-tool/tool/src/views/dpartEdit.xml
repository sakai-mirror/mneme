<interface title="partEdit-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

<header>
		<message selector="partEdit-header">
			<model type="icon" icon="/icons/edit.png" />
			<model ref="assessment.title" missing="no-title"/>
		</message>
</header>
	
	<container>
		<section title="properties">
		<container>
			<entityDisplay>
					<rows>
						<row title="part-title">
							<container>
								<textEdit rows="1" cols="25" >
									<model ref="part.title" />
								</textEdit>				
							</container>
						</row>
						<row title="part-instructions">
							<container>
								<textEdit model="part.presentation.text" />
							</container>
							</row>
						<row>
							<container>
								<attachmentsEdit title="attachments" model="part.presentation.attachments" />
							</container>
						</row>	
					</rows>
				</entityDisplay>
			</container>
		</section>
		<section title="part-pools-msg">
		<container>
		<entityActionBar>
			<container>
			<navigation destination="/" title="search-title"
					style="LINK" description="search-description">
					<icon icon="/icons/search.png" style="LEFT" />
				</navigation>
				<pager paging="paging">
					<destination template="/part_edit/{0}/{1}/{2}{3}/{4}">
						<model ref="assessment.id" />
						<model ref="part.id" />
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model type="paging" ref="paging" />
					</destination>
				</pager>				
			</container>
		</entityActionBar>			

				<!-- the list of ALL pools, with those selected for this part checked and their "draw" filled in -->
				<entityList style="FLAT">
				<emptyTitle>
						<message selector="no-pools" />
					</emptyTitle>
					<iterator name="draw">
						<model ref="draws" indexRef="pool.id" />
					</iterator>
					<columns>
						<column>
							<title>
								<message selector="pool-draw" />
							</title>
							<container>
								<textEdit rows="1" cols="4">
									<model ref="draw.numQuestions" />
								</textEdit>
							</container>
						</column>
						<modelColumn>
							<title>
								<message selector="pool-subject" />
							</title>
							<model ref="draw.pool.subject" />
							<sort>
								<active>
									<compareDecision model="sort_column"
										constant="0" />
								</active>
								<direction>
									<compareDecision model="sort_direction"
										constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/0A" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/0D" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-title" />
							</title>
							<model ref="draw.pool.title" missing="no-title"/>
							<sort>
								<active>
									<compareDecision model="sort_column"
										constant="1" />
								</active>
								<direction>
									<compareDecision model="sort_direction"
										constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/1A" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/1D" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-description" />
							</title>
							<model ref="draw.pool.description" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-questions" />
							</title>
							<model ref="draw.pool.numQuestions" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-points" />
							</title>
							<model ref="draw.pool.points" />
							<sort>
								<active>
									<compareDecision model="sort_column"
										constant="2" />
								</active>
								<direction>
									<compareDecision model="sort_direction"
										constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/2A" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/2D" >
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-difficulty" />
							</title>
							<model ref="draw.pool.difficulty" />
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<text>
			<message selector="part-num-questions">
				<model ref="part.numQuestions" />
			</message>
		</text>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="70em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/test_edit/{0}">
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/test_edit/{0}">
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
