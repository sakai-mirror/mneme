<interface title="partEdit-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="partEdit-header">
			<model type="icon" icon="/icons/edit.png" />
			<model ref="part.ordering.position" />
		</message>
	</header>

	<subHeader>
		<container>
			<text>
				<message>
					<model ref="assessment.title" missing="no-title" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<navigationBar />

		<section>
			<container>
				<textEdit title="part-title" rows="1" cols="40">
					<model ref="part.title" />
				</textEdit>
				<htmlEdit title="part-instructions" model="part.presentation.text" rows="5" cols="40"/>
				<attachmentsEdit title="attachments" model="part.presentation.attachments" />
			</container>
		</section>

		<section>
			<container>

				<!-- the list of ALL pools, with those selected for this part checked and their "draw" filled in -->
				<entityList style="FLAT" title="part-pools-msg">
					<emptyTitle>
						<message selector="no-pools" />
					</emptyTitle>
					<entityActions>
						<!--  inform if live -->
						<instructions>
							<message selector="live-warning-dpart">
								<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
							</message>
							<included>
								<decision model="assessment.isLive" />
							</included>
						</instructions>
					</entityActions>
					<pager paging="paging">
						<destination template="/part_edit/{0}/{1}/{2}/{3}{4}/{5}/{6}">
							<model ref="testsortcode" />
							<model ref="assessment.id" />
							<model ref="part.id" />
							<model ref="sort_column" />
							<model ref="sort_direction" />
							<model type="paging" ref="paging" />
							<model ref="view" />
						</destination>
					</pager>
					<iterator name="draw">
						<model ref="draws" indexRef="pool.id" />
					</iterator>
					<columns>
						<column>
							<title>
								<message selector="pool-draw" />
							</title>
							<container>
								<countEdit>
									<model ref="draw.numQuestions" />
									<summary initialValue="part.numQuestions" title="total-questions" />
									<readOnly>
										<decision model="assessment.isLive" />
									</readOnly>
									<maxValue>
										<model ref="draw.poolNumAvailableQuestions" />
									</maxValue>
								</countEdit>
							</container>
						</column>
						<modelColumn>
							<title>
								<message selector="pool" />
							</title>
							<model ref="draw.pool.title" missing="no-title" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="0" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/{2}/0A/{3}/{4}">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
										<model ref="view" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/{2}/0D/{3}/{4}">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
										<model ref="view" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="description" />
							</title>
							<model type="text" ref="draw.pool.description" max="60" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="questions" />
							</title>
							<model ref="draw.pool.numQuestions" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="points" />
							</title>
							<model ref="draw.pool.points" />

							<!--  TODO  -->
							<summary initialValue="part.totalPoints" title="total-points" />

							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="1" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/{2}/1A/{3}/{4}">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
										<model ref="view" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/{2}/1D/{3}/{4}">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
										<model ref="view" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="difficulty" />
							</title>
							<model ref="draw.pool.difficulty" />
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<!-- navigation -->
		<navigationBar id="nav">
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessment_edit/{0}/{1}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>

	<footer>
		<container>
			<finePrint>
				<message selector="id-display">
					<model ref="assessment.id" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-createText">
					<model type="userInfo" selector="DISPLAYNAME" ref="assessment.createdBy.UserId" />
					<model type="date" ref="assessment.createdBy.date" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-modifyText">
					<model type="userInfo" selector="DISPLAYNAME" ref="assessment.modifiedBy.UserId" />
					<model type="date" ref="assessment.modifiedBy.date" />
				</message>
			</finePrint>
		</container>
	</footer>

</interface>
