<interface title="partEdit-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="partEdit-header">
			<model type="icon" icon="/icons/edit.png" />
			<model ref="part.ordering.position" />			
		</message>
	</header>

	<container>
		<text>
			<message selector="assessment-title">
				<model ref="assessment.title" missing="no-title" />
			</message>
		</text>
		<navigationBar/>
		<section>
			<container>
				<entityDisplay>
					<rows>
						<row title="part-title">
							<container>
								<textEdit rows="1" cols="25">
									<model ref="part.title" />
								</textEdit>
							</container>
						</row>
						<row title="part-instructions">
							<container>
								<entityDisplay>
									<rows>
										<row>
											<container>
												<htmlEdit model="part.presentation.text" />
											</container>
										</row>
										<row title="attachments">
											<container>
												<attachmentsEdit model="part.presentation.attachments" />
											</container>
										</row>
									</rows>
								</entityDisplay>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>
		<section title="part-pools-msg">
			<container>
				<!--  warn if live -->
				<alert>
					<message selector="live-warning-dpart">
						<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
					</message>
					<included>
						<decision model="assessment.isLive" />
					</included>
				</alert>

				<!-- the list of ALL pools, with those selected for this part checked and their "draw" filled in -->
				<entityList style="FLAT">
					<emptyTitle>
						<message selector="no-pools" />
					</emptyTitle>
					<pager paging="paging">
						<destination template="/part_edit/{0}/{1}/{2}/{3}{4}/{5}">
							<model ref="testsortcode" />
							<model ref="assessment.id" />
							<model ref="part.id" />
							<model ref="sort_column" />
							<model ref="sort_direction" />
							<model type="paging" ref="paging" />
						</destination>
					</pager>
					<iterator name="draw">
						<model ref="draws" indexRef="pool.id" />
					</iterator>
					<columns>
						<column>
							<title>
								<message selector="pool-draw" />
							</title>
							<container>
								<countEdit>
									<model ref="draw.numQuestions" />
									<summary initialValue="part.numQuestions" title="part-num-questions" />
									<readOnly>
										<decision model="assessment.isLive" />
									</readOnly>
									<maxValue>
										<model ref="draw.pool.numQuestions" />
									</maxValue>
								</countEdit>
							</container>
						</column>
						<modelColumn>
							<title>
								<message selector="pool-title" />
							</title>
							<model ref="draw.pool.title" missing="no-title" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="0" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/{2}/0A">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/{2}/0D">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-description" />
							</title>
							<model type="text" ref="draw.pool.description" max="60" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-questions" />
							</title>
							<model ref="draw.pool.numQuestions" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-points" />
							</title>
							<model ref="draw.pool.points" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="1" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/part_edit/{0}/{1}/{2}/1A">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/part_edit/{0}/{1}/{2}/1D">
										<model ref="testsortcode" />
										<model ref="assessment.id" />
										<model ref="part.id" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool-difficulty" />
							</title>
							<model ref="draw.pool.difficulty" />
						</modelColumn>
					</columns>
				</entityList>
				<text>
					<message selector="total-points">
						<model ref="part.totalPoints" />
					</message>
				</text>
			</container>
		</section>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessment_edit/{0}/{1}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
