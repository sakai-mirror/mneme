<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-assessment-header-question">
			<model type="icon" icon="/icons/grade.png" />
		</message>
	</header>
	<title>
		<message selector="grading-assessment-title" />
	</title>
	<subHeader>
		<container>
			<text>
				<message selector="assessment-title">
					<model ref="assessment.title" />
				</message>
			</text>
			<text>
				<message selector="assessment-total-points">
					<model ref="assessment.Parts.totalPoints" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="grade-submission-title" style="LINK" accessKey="grade-submission-access"
					description="grade-submission-description">
					<icon icon="/icons/grade_student.png" style="LEFT" />
					<destination template="/grade_assessment/{0}/{1}">
						<model ref="sort_grades" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation disabled="TRUE" title="bar" />
				<navigation title="grade-questions-title" style="LINK" accessKey="grade-questions-access" description="grade-questions-description"
					submit="FALSE" disabled="TRUE">
					<icon icon="/icons/grade_questions.png" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

		<section>
			<title>
				<message selector="submission-question-pts">
					<model ref="question.pool.points" />
				</message>
			</title>
			<container>
				<!-- type-specific question viewing -->
				<text>
					<message>
						<model type="html" ref="question.presentation.text" />
					</message>
				</text>
				<attachments model="question.presentation.attachments">
					<included>
						<hasValueDecision model="question.presentation.attachments" />
					</included>
				</attachments>
				<modelComponent model="question.typeSpecificQuestion.viewQuestionUi" />
			</container>
		</section>

		<entityList style="FLAT">
			<iterator name="answer">
				<model ref="answers" indexRef="id" />
			</iterator>
			<pager paging="paging">
				<destination template="/grade_question/{0}/{1}/{2}/{3}{4}/{5}">
					<model ref="sort_grades" />
					<model ref="assessment.id" />
					<model ref="question.id" />
					<model ref="sort_column" />
					<model ref="sort_direction" />
					<model type="paging" ref="paging" />
				</destination>
			</pager>
			<emptyTitle>
				<message selector="no-submissions" />
			</emptyTitle>

			<columns>
				<modelColumn>
					<title>
						<message selector="submission-username" />
					</title>
					<included>
						<decision reversed="TRUE" model="assessment.grading.anonymous" />
					</included>
					<entityNavigations>
						<navigation submit="TRUE">
							<destination template="/grade_submission/{0}/grade_question/{1}/{2}/{3}/{4}{5}/{6}">
								<model ref="answer.submission.id" />
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model type="paging" ref="paging" />
							</destination>
							<included>
								<decision model="answer.submission.isComplete" />
							</included>
						</navigation>
					</entityNavigations>
					<model type="userInfo" selector="SORTNAME" ref="answer.submission.userId" missing="no-username" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_question/{0}/{1}/{2}/0A/{3}">
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model type="paging" ref="paging" selector="FIRST" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_question/{0}/{1}/{2}/0D/{3}">
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model type="paging" ref="paging" selector="FIRST" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<column>
					<title>
						<message selector="submission-username" />
					</title>
					<included>
						<decision model="assessment.grading.anonymous" />
					</included>
					<entityNavigations>
						<navigation submit="TRUE">
							<destination template="/grade_submission/{0}/grade_question/{1}/{2}/{3}/{4}{5}/{6}">
								<model ref="answer.submission.id" />
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model type="paging" ref="paging" />
							</destination>
							<included>
								<decision model="answer.submission.isComplete" />
							</included>
						</navigation>
					</entityNavigations>
					<container>
						<text selector="anonymous" />
					</container>
				</column>
				<column>
					<title>
						<message selector="submission-finished" />
					</title>
					<container>
						<text>
							<message>
								<model type="date" ref="answer.submission.submittedDate" />
							</message>
							<included>
								<decision reversed="TRUE" model="answer.submission.isCompletedLate" />
							</included>
						</text>
						<text>
							<message selector="submission-finished-date-late">
								<model type="date" ref="answer.submission.submittedDate" />
							</message>
							<included>
								<decision model="answer.submission.isCompletedLate" />
							</included>
						</text>
					</container>
					<entityIncluded>
						<decision model="answer.submission.isComplete" />
					</entityIncluded>
				</column>
				<column>
					<title>
						<message selector="submission-answer" />
					</title>
					<container>
						<!-- Answer type-specific viewing -->
						<modelComponent model="answer.question.typeSpecificQuestion.viewAnswerUi" />
						<text selector="submission-comments" />
						<htmlEdit model="answer.evaluation.comment" rows="5" cols="40" />
					</container>
				</column>
				<column>
					<title>
						<message selector="submission-score" />
					</title>
					<container>
						<text>
							<message selector="auto-score">
								<model ref="answer.autoScore" missing="dash" />
							</message>
						</text>
					</container>
				</column>
				<column>
					<title>
						<message selector="submission-final" />
					</title>
					<container>
						<floatEdit model="answer.totalScore" cols="6" />
					</container>
					<sort>
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_question/{0}/{1}/{2}/1A/{3}">
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model type="paging" ref="paging" selector="FIRST" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_question/{0}/{1}/{2}/1D/{3}">
								<model ref="sort_grades" />
								<model ref="assessment.id" />
								<model ref="question.id" />
								<model type="paging" ref="paging" selector="FIRST" />
							</destination>
						</desc>
					</sort>
				</column>
			</columns>
		</entityList>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/grade_questions_list/{0}/{1}">
						<model ref="sort_grades" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<divider />
				<pager paging="paging">
					<destination template="/grade_question/{0}/{1}/{2}/{3}{4}/{5}">
						<model ref="sort_grades" />
						<model ref="assessment.id" />
						<model ref="question.id" />
						<model ref="sort_column" />
						<model ref="sort_direction" />
						<model type="paging" ref="paging" />
					</destination>
				</pager>
			</container>
		</navigationBar>
	</container>
</interface>
