<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-assessment-header">
			<model type="icon" icon="/icons/grade.png" />
			<model ref="assessment.title" />
		</message>
	</header>
	<title>
		<message selector="grading-assessment-title" />
	</title>

	<container>
		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="grade-submission-title" style="LINK" accessKey="grade-submission-access"
					description="grade-submission-description">
					<icon icon="/icons/grade_student.png" style="LEFT" />
					<destination template="/grade_assessment/{0}/{1}">
						<model ref="gradeSortCode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation title="grade-questions-title" style="LINK" accessKey="grade-questions-access" description="grade-questions-description"
					submit="FALSE" disabled="TRUE">
					<icon icon="/icons/grade_questions.png" style="LEFT" />
					<destination template="/" />
				</navigation>
			</container>
		</navigationBar>

		<entityDisplay>
			<rows>
				<row title="actions">
					<container>
						<entityDisplay>
							<rows>
								<row title="adjust-scores">
									<container>
										<textEdit model="" rows="1" cols="4" />
									</container>
								</row>
							</rows>
						</entityDisplay>
					</container>
				</row>
				<row>
					<container>
						<text selector="add-comments" />
					</container>
				</row>
				<row>
					<container>
						<textEdit model="" rows="5" cols="40" />
					</container>
				</row>
			</rows>
		</entityDisplay>
		<entityDisplay>
			<title>
				<message selector="submission-question" />
				<message selector="submission-question-pts">
					<model ref="question.pool.points" />
				</message>
			</title>
			<rows>
				<row>
					<container>
						<!-- question presentation (text) -->
						<text>
							<message>
								<model type="html" ref="question.presentation.text" />
							</message>
						</text>
						<!-- type-specific question viewing -->
						<modelComponent model="question.typeSpecificQuestion.viewQuestionUi" />
					</container>
				</row>
			</rows>
		</entityDisplay>

		<entityList style="FLAT">
			<iterator name="answer" model="answers" />
			<emptyTitle>
				<message selector="no-submissions" />
			</emptyTitle>
			<pager paging="paging">
				<destination template="/" />
			</pager>
			<columns>
				<modelColumn>
					<title>
						<message selector="submission-username">
							<model type="userInfo" selector="SORTNAME" ref="answer.submission.userId" />
						</message>
					</title>
					<model ref="answer.submission.userId" missing="no-username" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_question/{0}/{1}/{2}/0A">
								<model ref="gradeSortCode" />
								<model ref="assessment.id" />
								<model ref="question.id" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_question/{0}/{1}/{2}/0D">
								<model ref="gradeSortCode" />
								<model ref="assessment.id" />
								<model ref="question.id" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="submission-finished" />
					</title>
					<model type="date" ref="answer.submittedDate" />
					<entityIncluded>
						<decision model="answer.isComplete" />
					</entityIncluded>
				</modelColumn>
				<column>
					<title>
						<message selector="submission-answer" />
					</title>
					<container>
						<entityDisplay>
							<rows>
								<row>
									<container>
										<!-- Answer type-specific viewing -->
										<modelComponent model="answer.question.typeSpecificQuestion.viewAnswerUi" />
									</container>
								</row>
								<row>
									<container>
										<text selector="submission-comments" />
									</container>
								</row>
								<row>
									<container>
										<textEdit model="answer.evaluation.comment" rows="2" cols="20" />
									</container>
								</row>
							</rows>
						</entityDisplay>
					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="submission-tries" />
					</title>
					<navigations>
						<navigation style="LINK">
							<title>
								<message model="answer.submission.siblingCount" />
							</title>
							<destination template="/" />
						</navigation>
						<navigation>
							<title>
								<message selector="nav-divider" />
							</title>
						</navigation>
						<navigation style="LINK" disabled="TRUE">
							<title>
								<message model="answer.submission.assessment.numSubmissionsAllowed" />
							</title>
							<destination template="/" />
						</navigation>
					</navigations>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="submission-score" />
					</title>
					<model ref="answer.autoScore" />
				</modelColumn>
				<column>
					<title>
						<message selector="submission-adjust" />
					</title>
					<container>
						<textEdit model="answer.evaluation.score" rows="1" cols="4" />
					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="submission-final" />
					</title>
					<model ref="answer.totalScore" />
				</modelColumn>
			</columns>
		</entityList>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="prev" style="BUTTON" accessKey="prev-access" description="prev-description" submit="TRUE">
					<icon icon="/icons/prev.gif" style="LEFT" />
					<destination template="PREV" />
					<disabled>
						<andDecision>
							<hasValueDecision model="question" />
							<decision model="question.assessmentOrdering.isFirst" />
						</andDecision>
						<andDecision>
							<hasValueDecision model="question.part" />
							<decision model="question.part.ordering.isFirst" />
						</andDecision>						
					</disabled>
				</navigation>
				<navigation title="toc" accessKey="toc-access" description="toc-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/contents.gif" style="LEFT" />
					<destination template="/" />
				</navigation>
				<navigation title="next" accessKey="next-access" description="next-description" style="BUTTON" destination="NEXT" submit="TRUE"
					default="TRUE">
					<icon icon="/icons/next.gif" style="RIGHT" />
					<destination template="NEXT" />
					<disabled>					
						<andDecision>							
							<decision model="question.assessmentOrdering.isLast" />
						</andDecision>
						<andDecision>
							<decision model="question.part.ordering.isLast" />
						</andDecision>										
					</disabled>
				</navigation>
				<divider />
				<navigation title="save" style="BUTTON" accessKey="save-access" description="save-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="/grade_question/{0}/{1}/{2}">
						<model ref="gradeSortCode" />
						<model ref="assessment.id" />
						<model ref="question.id" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grades/{0}">
						<model ref="gradeSortCode" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>