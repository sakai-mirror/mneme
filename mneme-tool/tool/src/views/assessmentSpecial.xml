<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<!--  header and title & header -->
	<title>
		<message selector="special-title">
			<model ref="assessment.title" missing="no-title" />
		</message>
	</title>
	<header>
		<message selector="special-header">
			<model type="icon" icon="/icons/basket_add.png" />
			<model ref="assessment.title" missing="no-title" />
		</message>
	</header>

	<container>

		<!-- the list of special access definitions -->
		<entityList style="FLAT">
			<iterator name="access" model="assessment.specialAccess.access" />
			<emptyTitle>
				<message selector="no-access" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="access.id" />
					</value>
					<model ref="ids.values" />
					<entityActions>
						<navigation title="add-access" style="LINK" description="add-access-description" submit="TRUE">
							<icon icon="/icons/document_add.png" style="LEFT" />
							<destination template="ADD" />
						</navigation>
						<navigation selectRequirement="SOME" selectRequirementMessage="delete-failed-requirements" title="delete-title" style="LINK"
							description="delete-description" submit="TRUE">
							<icon icon="/icons/delete.png" style="LEFT" />
							<destination template="DEL" />
						</navigation>
					</entityActions>
				</selectionColumn>
				<modelColumn>
					<title>
						<message selector="access-users" />
					</title>
					<model ref="access.usersDisplay" />
					<entityNavigations>
						<navigation>
							<destination template="/assessment_access/{0}/{1}/{2}">
								<model ref="sort" />
								<model ref="assessment.id" />
								<model ref="access.id" />
							</destination>
						</navigation>
					</entityNavigations>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="open" />
					</title>
					<model ref="access.dates.openDate" type="date" twoLine="TRUE" missing="dash" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="due" />
					</title>
					<model ref="access.dates.dueDate" type="date" twoLine="TRUE" missing="dash" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="accept-until" />
					</title>
					<model ref="access.dates.acceptUntilDate" type="date" twoLine="TRUE" missing="dash" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="time-limit" />
					</title>
					<model ref="access.timeLimit" type="duration" missing="dash" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="tries" />
					</title>
					<model ref="access.tries" type="count" missing="dash" />
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="password" />
					</title>
					<model ref="access.password.password" missing="dash" />
				</modelColumn>
			</columns>
		</entityList>

		<!-- nav bar -->
		<navigationBar id="nav" width="100%">
			<container>
				<navigation title="return" accessKey="return-access" description="return-description" style="BUTTON" submit="TRUE">
					<destination template="/assessments/{0}">
						<model ref="sort" />
					</destination>
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
