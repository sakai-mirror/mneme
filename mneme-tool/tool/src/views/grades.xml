<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-header">
			<model type="icon" icon="/icons/grade.png" />
		</message>
	</header>
	<title>
		<message selector="grading-title" />
	</title>
	<subHeader/>		
	<container>		
		<!-- the list of assessments -->
		<entityList style="FLAT">
			<iterator name="assessment">
				<model ref="assessments" indexRef="id" />
			</iterator>
			<emptyTitle>
				<message selector="no-assessments" />
			</emptyTitle>
			<columns>
				<column>
					<title>
						<message selector="assessment-view" />
					</title>
					<navigations>
						<navigation description="assessment-type-test" style="LINK" submit="TRUE">
							<icon icon="/icons/test_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="test" />
							</included>
							<destination template="/assessment_preview/{0}/grades/{1}{2}">
								<model ref="assessment.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
							</destination>
						</navigation>
						<navigation description="assessment-type-survey" style="LINK" submit="TRUE">
							<icon icon="/icons/survey_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="survey" />
							</included>
							<destination template="/assessment_preview/{0}/grades/{1}{2}">
								<model ref="assessment.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
							</destination>
						</navigation>
						<navigation description="assessment-type-assignment" style="LINK" submit="TRUE">
							<icon icon="/icons/assignment_type.png" style="LEFT" />
							<included>
								<compareDecision model="assessment.type" constant="assignment" />
							</included>
							<destination template="/assessment_preview/{0}/grades/{1}{2}">
								<model ref="assessment.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
							</destination>
						</navigation>
					</navigations>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grades/0A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grades/0D" />
						</desc>
					</sort>
				</column>			
				<column>
					<title>
						<message selector="assessment-title" />
					</title>
					<container>
						<navigation style="LINK" submit="TRUE">
							<title>
								<message>
									<model ref="assessment.title" missing="no-title" />
								</message>
							</title>
							<destination template="/grade_assessment/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-odate"/>
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grades/1A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grades/1D" />
						</desc>
					</sort>
					<container>
						<text>
							<message selector="assessment-show-odate">
								<model ref="assessment.dates.openDate" type="date" missing="dash" />
							</message>
						</text>
					</container>
				</column>
				<column>
					<title>
						<message selector="assessment-ddate" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="2" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grades/2A" />
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grades/2D" />
						</desc>
					</sort>
					<container>
						<text>
							<message selector="assessment-show-ddate">
								<model ref="assessment.dates.dueDate" type="date" missing="dash" />
							</message>
						</text>
					</container>
				</column>
				<modelColumn>
					<title>
						<message selector="submit_status" />
					</title>					
					<model type="enum" ref="assessment.acceptSubmitStatus" messageRoot="submit-status-" />					
				</modelColumn>
				<modelColumn>					
					<navigations>
						<navigation style="LINK" submit="TRUE">
							<icon icon="/icons/grade.png" />
							<destination template="/grade_assessment/{0}{1}/{2}">
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="assessment.id" />
							</destination>
						</navigation>
					</navigations>
					<entityIncluded>
						<decision model="assessment.hasUnscoredSubmissions" />
					</entityIncluded>
				</modelColumn>
			</columns>
		</entityList>
	</container>
</interface>
