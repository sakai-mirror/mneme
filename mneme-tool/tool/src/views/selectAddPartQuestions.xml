<interface title="select-add-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="select-add-header">
			<model type="icon" icon="/icons/hand_select.png" />
		</message>
	</header>
	<container>
		<text>
			<message selector="select-add-to">
				<model ref="partTitle" missing="no-title" />
				<model ref="assessmentTitle" missing="no-title" />
			</message>
		</text>
		<section>
			<container>
				<!-- the list of the selected questions -->
				<entityList style="FLAT">
					<emptyTitle>
						<message selector="no-questions" />
					</emptyTitle>
					<pager paging="paging">
						<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/{4}{5}">
							<model ref="testsortcode" />
							<model ref="assessmentId" />
							<model ref="partId" />
							<model type="paging" ref="paging" />
							<model ref="sort_column" />
							<model ref="sort_direction" />
						</destination>
					</pager>
					<iterator name="question" model="questions" />
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model type="text" ref="question.id" />
							</value>
							<model ref="questionids.values" />
							<entityIncluded>
								<decision reversed = "TRUE" model="question.id" delegate="QuestionReferencedDecision" tool="sakai.mneme" />
								<message>
									<model type="icon" icon="/icons/cancel.gif" />
								</message>
							</entityIncluded>							
						</selectionColumn>
						<modelColumn>
							<title>
								<message selector="question-pool-title" />
							</title>
							<model ref="question.pool.title" missing="no-title" />
							<sort>
								<active>
									<compareDecision model="sort_column" constant="1" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/1A">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/1D">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<column>
							<title>
								<message selector="question-preview" />
							</title>
							<navigations>
								<navigation style="LINK">
									<icon icon="/icons/preview.png" style="LEFT" />
									<destination template="/question_preview/{0}">
										<model ref="question.id" />
									</destination>
								</navigation>
							</navigations>
						</column>
						<modelColumn>
							<title>
								<message selector="question-description" />
							</title>
							<model ref="question.description" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-type" />
							</title>
							<model ref="question.typeName" />
							<sort>
								<active>
									<compareDecision model="sort_column" constant="0" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/0A">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/0D">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-difficulty" />
							</title>
							<model ref="question.pool.difficulty" />							
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-points" />
							</title>
							<model ref="question.pool.points" />
							<sort>
								<active>
									<compareDecision model="sort_column" constant="2" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/2A">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}/2D">
										<model ref="testsortcode" />
										<model ref="assessmentId" />
										<model ref="partId" />
										<model ref="pagingParameter" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="100%">
			<container>
				<navigation title="add" accessKey="add-access" description="add-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/add.png" style="LEFT" />
					<destination template="/part_edit/{0}/{1}/{2}">
						<model ref="testsortcode" />
						<model ref="assessmentId" />
						<model ref="partId" />
					</destination>
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/part_edit/{0}/{1}/{2}">
						<model ref="testsortcode" />
						<model ref="assessmentId" />
						<model ref="partId" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
