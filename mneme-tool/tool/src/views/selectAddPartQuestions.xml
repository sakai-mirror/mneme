<interface title="select-add-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="select-add-header">
			<model type="icon" icon="/icons/add_manual.png" />
		</message>
	</header>
	<subHeader>
		<container>
			<text>
				<message selector="select-add-to">
					<model ref="part.title" missing="no-title" />
					<model ref="assessment.title" missing="no-title" />
				</message>
			</text>
		</container>
	</subHeader>
	<container>
		<section>
			<container>
				<!-- the list of the selected questions -->
				<entityList style="FLAT">
					<emptyTitle>
						<message selector="no-questions" />
					</emptyTitle>
					<pager paging="paging" submit="TRUE">
						<destination template="/select_add_mpart_question/{0}/{1}/{2}/{3}{4}/{5}">
							<model ref="assessmentSort" />
							<model ref="assessment.id" />
							<model ref="part.id" />
							<model ref="sort_column" />
							<model ref="sort_direction" />
							<model type="paging" ref="paging" />
						</destination>
					</pager>
					<iterator name="question" model="questions" />
					<columns>
						<selectionColumn multiple="TRUE" pixels="16">
							<value>
								<model type="text" ref="question.id" />
							</value>
							<model ref="questionids.values" />
							<entityIncluded>
								<decision reversed="TRUE" model="question.id" delegate="QuestionReferencedDecision" tool="sakai.mneme" />
								<message>
									<model type="icon" icon="/icons/checkon.gif" />
								</message>
							</entityIncluded>
						</selectionColumn>
						<column pixels="16">
							<navigations>
								<navigation style="LINK" submit="TRUE" description="view-question">
									<icon icon="/icons/preview.png" style="LEFT" />
									<destination template="/question_preview/{0}/select_add_mpart_question/{1}/{2}/{3}/{4}{5}/{6}">
										<model ref="question.id" />
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model ref="sort_column" />
										<model ref="sort_direction" />
										<model type="paging" ref="paging" />
									</destination>
								</navigation>
							</navigations>
						</column>
						<modelColumn>
							<title>
								<message selector="question-description" />
							</title>
							<model type="text" ref="question.description" missing="no-title" stripHtml="TRUE" max="60" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="3" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/3A/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/3D/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-type" />
							</title>
							<model ref="question.typeName" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="1" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/1A/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/1D/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-pool-title" />
							</title>
							<model ref="question.pool.title" missing="no-title" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="0" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/0A/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/0D/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-difficulty" />
							</title>
							<model ref="question.pool.difficulty" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-points" />
							</title>
							<model ref="question.pool.points" />
							<sort submit="TRUE">
								<active>
									<compareDecision model="sort_column" constant="2" />
								</active>
								<direction>
									<compareDecision model="sort_direction" constant="A" />
								</direction>
								<asc icon="/icons/sortascending.gif">
									<message selector="asc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/2A/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</asc>
								<desc icon="/icons/sortdescending.gif">
									<message selector="desc" />
									<destination template="/select_add_mpart_question/{0}/{1}/{2}/2D/{3}">
										<model ref="assessmentSort" />
										<model ref="assessment.id" />
										<model ref="part.id" />
										<model type="paging" ref="paging" selector="FIRST" />
									</destination>
								</desc>
							</sort>
						</modelColumn>
					</columns>
				</entityList>

			</container>
		</section>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/part_edit/{0}/{1}/{2}">
						<model ref="assessmentSort" />
						<model ref="assessment.id" />
						<model ref="part.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
