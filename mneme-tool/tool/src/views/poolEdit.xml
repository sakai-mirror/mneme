<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="pool-edit-title" />
	</title>

	<header>
		<message selector="pool-edit-header">
			<model type="icon" icon="/icons/basket_add.png" />
			<model ref="pool.title" missing="no-title" />
		</message>
	</header>

	<subHeader>
		<container>
			<text>
				<message selector="point-value-text">
					<model ref="pool.points" />
				</message>
			</text>
			<text>
				<message selector="difficult-level-text">
					<model ref="pool.difficulty" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<!-- the list of questions -->
		<entityList style="FLAT">
			<iterator name="question" model="questions" />
			<emptyTitle>
				<message selector="no-questions" />
			</emptyTitle>
			<columns>
				<selectionColumn multiple="TRUE">
					<value>
						<model type="text" ref="question.id" />
					</value>
					<model ref="questionids.values" />
					<entityActions>
						<navigation submit="TRUE" style="LINK" title="add-question-title" description="add-question-description">
							<destination template="/select_question_type/{0}/{1}/{2}/{3}{4}/{5}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
							<icon icon="/icons/add_qst.png" style="LEFT" />
						</navigation>
						<navigation title="move-to-pool" selectRequirement="SOME" selectRequirementMessage="move-failed-requirements" style="LINK"
							description="move-to-pool-description" disabled="FALSE" submit="TRUE">
							<icon icon="/icons/page_go.png" style="LEFT" />
							<destination template="/question_move/{0}/{1}/{2}/{3}{4}/{5}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
						</navigation>
						<navigation title="copy-to-pool" selectRequirement="SOME" selectRequirementMessage="copy-failed-requirements" style="LINK"
							description="copy-to-pool-description" submit="TRUE">
							<icon icon="/icons/copy.png" style="LEFT" />
							<destination template="/question_copy/{0}/{1}/{2}/{3}{4}/{5}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
						</navigation>
						<navigation title="delete-title" selectRequirement="SOME" selectRequirementMessage="delete-failed-requirements" style="LINK"
							description="delete-description" submit="TRUE">
							<icon icon="/icons/delete.png" style="LEFT" />
							<destination template="/questions_delete/{0}/{1}/{2}/{3}{4}/{5}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
							<confirm decision="TRUE" cancelSelector="cancel" cancelIcon="/icons/cancel.gif" selector="confirm-delete" />
						</navigation>
						<pager paging="paging" submit="TRUE">
							<destination template="/pool_edit/{0}/{1}/{2}/{3}{4}/{5}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model type="paging" ref="paging" />
							</destination>
						</pager>
					</entityActions>
				</selectionColumn>
				<column>
					<title>
						<message selector="question-preview" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE">
							<icon icon="/icons/preview.png" style="LEFT" />
							<destination template="/question_preview/{0}/pool_edit/{1}/{2}/{3}/{4}{5}">
								<model ref="question.id" />
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
							</destination>
						</navigation>
					</navigations>
				</column>
				<modelColumn>
					<title>
						<message selector="question-description" />
					</title>
					<model type="text" ref="question.description" missing="no-title" stripHtml="TRUE" max="60" />
					<entityNavigations>
						<navigation>
							<destination template="/question_edit/{0}/{1}/{2}/{3}{4}/{5}/{6}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
								<model ref="question.id" />
							</destination>
						</navigation>
					</entityNavigations>
					<sort>
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pool_edit/{0}/{1}/{2}/0A">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pool_edit/{0}/{1}/{2}/0D">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="question-type" />
					</title>
					<model ref="question.typeName" />
					<sort>
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/pool_edit/{0}/{1}/{2}/1A">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/pool_edit/{0}/{1}/{2}/1D">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<modelColumn>
					<title>
						<message selector="question-duplicate" />
					</title>
					<navigations>
						<navigation style="LINK" submit="TRUE" description="question-duplicate-description">
							<icon icon="/icons/copy.png" style="LEFT" />
							<destination template="/question_duplicate/{0}/{1}/{2}/{3}">
								<model ref="poolsSortCode" />
								<model ref="poolsPagingParameter" />
								<model ref="pool.id" />
								<model ref="question.id" />
							</destination>
						</navigation>
					</navigations>
				</modelColumn>
			</columns>
		</entityList>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="return" style="BUTTON" submit="FALSE">
					<icon icon="/icons/return.png" style="LEFT" />
					<!--destination template="/pools" /-->
					<destination template="/pools/{0}/{1}">
						<model ref="poolsSortCode" />
						<model ref="poolsPagingParameter" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>

	<footer>
		<container>
			<finePrint>
				<message selector="id-display">
					<model ref="pool.id" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-createText">
					<model type="userInfo" selector="DISPLAYNAME" ref="pool.createdBy.UserId" />
					<model type="date" ref="pool.createdBy.date" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-modifyText">
					<model type="userInfo" selector="DISPLAYNAME" ref="pool.modifiedBy.UserId" />
					<model type="date" ref="pool.modifiedBy.date" />
				</message>
			</finePrint>
		</container>
	</footer>

</interface>
