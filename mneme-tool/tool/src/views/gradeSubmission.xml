<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-submission-header">
			<model type="icon" icon="/icons/grade.png" />
			<model ref="assessment.title" />
		</message>
	</header>
	<title>
		<message selector="grading-submission-title" />
	</title>

	<container>
		<!--top navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="prev" style="BUTTON" accessKey="prev-access" description="prev-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="prevSubmission" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/previous.png" style="LEFT" />
					<destination template="/PREV:grade_submission/{0}/{1}">
						<model ref="destinationPath" />
						<model ref="prevSubmission.id" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="list" style="BUTTON" accessKey="list-access" description="list-description" submit="TRUE">
					<icon icon="/icons/contents.gif" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="next" style="BUTTON" accessKey="next-access" description="next-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="nextSubmission" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/next.png" style="LEFT" />
					<destination template="/NEXT:grade_submission/{0}/{1}">
						<model ref="destinationPath" />
						<model ref="nextSubmission.id" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<divider />
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grade_assessment/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="{0}">
						<model ref="sakai_prev_destination" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="TRUE" />
					</included>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="{0}">
						<model ref="sakai_prev_destination" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="TRUE" />
					</included>
				</navigation>
			</container>
		</navigationBar>

		<entityDisplay>
			<rows>
				<row title="submission-username">
					<model type="userInfo" selector="DISPLAYNAME" ref="submission.userId" />
				</row>
				<row title="submitted">
					<container>
						<text>
							<message>
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision reversed="TRUE" model="submission.isCompletedLate" />
							</included>
						</text>
						<text>
							<message selector="submission-finished-date-late">
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision model="submission.isCompletedLate" />
							</included>
						</text>
					</container>
				</row>
				<row title="released">
					<container>
						<entityDisplay>
							<title>
								<message selector="releasedIcon">
									<model type="icon" icon="/icons/checkon.gif" />
								</message>
							</title>
							<included>
								<compareDecision model="submission.isReleased" constant="true" />
							</included>
						</entityDisplay>
					</container>
				</row>
			</rows>
		</entityDisplay>

		<section>
			<iterator name="answer" model="submission.answers" />

			<container>
				<entityDisplay>
					<rows>
						<row>
							<title highlighted="TRUE">
								<message selector="question-number">
									<model ref="answer.question.assessmentOrdering.position" />
									<model ref="answer.question.part.assessment.parts.NumQuestions" />
								</message>
							</title>
							<container>
								<floatEdit model="answer.totalScore">
									<title highlighted="TRUE">
										<message selector="answer-points">
											<model ref="answer.autoScore" />
											<model ref="answer.question.pool.points" />
										</message>
									</title>
								</floatEdit>
							</container>
						</row>

						<row>
							<container>
								<!-- question presentation (text and attachments) -->
								<text>
									<message>
										<model type="html" ref="answer.question.presentation.text" />
									</message>
								</text>

								<attachments model="answer.question.presentation.attachments">
									<included>
										<hasValueDecision model="answer.question.presentation.attachments" />
									</included>
								</attachments>
								
								<!-- submission title -->
								<section>
									<container>
										<text>
											<message selector="submission" />
										</text>
									</container>
								</section>

								<!-- Question specific review -->
								<modelComponent model="answer.question.typeSpecificQuestion.reviewUi" />

								<!-- answer key -->
								<text>
									<message selector="question-answer-key">
										<model type="icon" icon="/icons/answer_key.png" />
										<model type="html" ref="answer.question.answerKey" />
									</message>
									<included>
										<hasValueDecision model="answer.question.answerKey" />
									</included>
								</text>

								<!-- question feedback -->
								<text>
									<message selector="question-feedback">
										<model type="icon" icon="/icons/feedback.png" />
										<model type="html" ref="answer.question.feedback" />
									</message>
									<included>
										<hasValueDecision model="answer.question.feedback" />
									</included>
								</text>

								<!-- reason -->
								<text>
									<message selector="question-rationale">
										<model type="icon" icon="/icons/reason.png" />
										<model ref="answer.reason" />
									</message>
									<included>
										<hasValueDecision model="answer.reason" />
									</included>
								</text>
								
								<section>
									<container>
										<text>
											<message selector="submission-comments">
												<model type="icon" icon="/icons/note.png" />
											</message>
										</text>

										<textEdit model="answer.evaluation.comment" rows="5" cols="50" />
									</container>
								</section>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>

		<section>
			<container>
				<entityDisplay>
					<rows>
						<!--Overall Comments-->
						<row>
							<title>
								<message selector="overall-comments">
									<model type="icon" icon="/icons/note.png" />
								</message>
							</title>
							<container>
								<textEdit model="submission.evaluation.comment" rows="5" cols="50" />
							</container>
						</row>

						<!--Graded Status-->
						<row>
							<title>
								<message selector="graded-status" />
							</title>
							<container>
								<floatEdit model="submission.totalScore">
									<title>
										<message selector="final-score">
											<model ref="submission.assessment.parts.totalPoints" />
										</message>
									</title>
								</floatEdit>
							</container>
						</row>

						<!--Mark as evaluated but don't release to student-->
						<row>
							<container>
								<selection title="mark-evaluated">
									<model ref="submission.evaluation.evaluated" />
								</selection>
							</container>
						</row>

						<!--Release scores and comments to student-->
						<row>
							<container>
								<selection title="release-scores">
									<model ref="submission.isReleased" />
								</selection>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="prev" style="BUTTON" accessKey="prev-access" description="prev-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="prevSubmission" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/previous.png" style="LEFT" />
					<destination template="/PREV:grade_submission/{0}/{1}">
						<model ref="destinationPath" />
						<model ref="prevSubmission.id" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="list" style="BUTTON" accessKey="list-access" description="list-description" submit="TRUE">
					<icon icon="/icons/contents.gif" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="next" style="BUTTON" accessKey="next-access" description="next-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="nextSubmission" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/next.png" style="LEFT" />
					<destination template="/NEXT:grade_submission/{0}/{1}">
						<model ref="destinationPath" />
						<model ref="nextSubmission.id" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<divider />
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grade_assessment/{0}">
						<model ref="destinationPath" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="FALSE" />
					</included>
				</navigation>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="{0}">
						<model ref="sakai_prev_destination" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="TRUE" />
					</included>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="{0}">
						<model ref="sakai_prev_destination" />
					</destination>
					<included>
						<compareDecision model="fromGradeByQuestion" constant="TRUE" />
					</included>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
