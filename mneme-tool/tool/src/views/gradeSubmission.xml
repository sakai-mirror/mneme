<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-submission-header">
			<model type="icon" icon="/icons/grade.png" />
			<model ref="assessment.title" />
		</message>
	</header>
	<title>
		<message selector="grading-submission-title" />
	</title>

	<container>
		<!--top navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="list" style="BUTTON" accessKey="list-access" description="list-description" submit="TRUE">
					<icon icon="/icons/contents.gif" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grade_assessment/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

		<entityDisplay>
			<rows>
				<row title="submission-username">
					<model type="userInfo" selector="SORTNAME" ref="submission.userId" />
				</row>
				<row title="submitted">
					<model type="date" ref="submission.submittedDate" />
				</row>
				<row title="released">
					<model ref="submission.isReleased" />
				</row>
				<row>
					<title>
						<message selector="total-grade">
							<model type="icon" icon="/icons/grade.png" />
						</message>
					</title>
					<model ref="submission.totalScore" />
				</row>
			</rows>
		</entityDisplay>

		<section>
			<iterator name="answer" model="submission.answers" />
			<container>
				<entityDisplay>
					<rows>
						<row>
							<container>
								<!-- question presentation (text) -->
								<text>
									<message>
										<model type="html" ref="answer.question.presentation.text" />
									</message>
								</text>
								<!-- type-specific question viewing -->
								<modelComponent model="answer.question.typeSpecificQuestion.viewQuestionUi" />
							</container>
						</row>
						<row>
							<container>
								<!-- Answer type-specific viewing -->
								<modelComponent model="answer.question.typeSpecificQuestion.viewAnswerUi" />
							</container>
						</row>
						<row>
							<container>
								<text>
									<message selector="submission-comments">
										<model type="icon" icon="/icons/note.png" />
									</message>
								</text>
							</container>
						</row>
						<row>
							<container>
								<htmlEdit model="answer.evaluation.comment" rows="2" cols="20" />
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="list" style="BUTTON" accessKey="list-access" description="list-description" submit="TRUE">
					<icon icon="/icons/contents.gif" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
					<destination template="/grade_submission_save/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grade_assessment/{0}">
						<model ref="destinationPath" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
