<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="grading-submission-title" />
	</title>

	<header>
		<message selector="grading-submission-header">
			<model type="icon" icon="/icons/grade.png" />
		</message>
	</header>

	<subHeader>
		<container>
			<text>
				<message selector="assessment-title">
					<model ref="submission.assessment.title" />
				</message>
			</text>
			<text>
				<message selector="assessment-total-points">
					<model ref="submission.assessment.Parts.totalPoints" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<!-- repeat the nav up top -->
		<alias to="nav" />

		<entityDisplay>
			<rows>
				<row title="submission-username">
					<model type="userInfo" selector="DISPLAYNAME" ref="submission.userId" />
					<included>
						<decision reversed="TRUE" model="submission.assessment.grading.anonymous" />
					</included>
				</row>
				<row title="submitted">
					<container>
						<text>
							<message>
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision reversed="TRUE" model="submission.isCompletedLate" />
							</included>
						</text>
						<text>
							<message selector="submission-finished-date-late">
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision model="submission.isCompletedLate" />
							</included>
						</text>
					</container>
				</row>
				<row title="released">
					<model type="icon" icon="/icons/active.png" />
					<included>
						<decision model="submission.isReleased" />
					</included>
				</row>
			</rows>
		</entityDisplay>

		<section>
			<iterator name="answer" model="submission.answers" />

			<!-- section title -->
			<title>
				<message selector="instructions-section-title">
					<model type="icon" icon="/icons/section.png" />
					<model type="text" ref="answer.question.part.ordering.position" />
					<model type="text" ref="answer.question.part.assessment.parts.size" />
					<model type="text" ref="answer.question.part.title" />
					<model ref="answer.question.part" delegate="SectionScore" tool="sakai.mneme" />
				</message>
				<included>
					<orDecision>
						<decision model="answer.question.partOrdering.isFirst" />
					</orDecision>
					<decision model="answer.question.part.assessment.parts.showPresentation" />
				</included>
			</title>

			<container>

				<!-- part presentation -->
				<text model="answer.question.part.presentation.text">
					<included>
						<decision model="answer.question.partOrdering.isFirst" />
						<decision model="answer.question.part.assessment.parts.showPresentation" />
					</included>
				</text>
				<attachments title="attachments" model="answer.question.part.presentation.attachments">
					<included>
						<hasValueDecision model="answer.question.part.presentation.attachments" />
						<decision model="answer.question.partOrdering.isFirst" />
						<decision model="answer.question.part.assessment.parts.showPresentation" />
					</included>
				</attachments>

				<section>

					<!-- question header -->
					<title highlighted="TRUE">
						<message selector="question-header">
							<model type="html" ref="answer.question" delegate="FormatQuestionTitle" tool="sakai.mneme" />
							<model type="component">
								<container>
									<floatEdit model="answer.totalScore" defaultValue="answer.autoScore" sumTo="total" cols="6" />
								</container>
							</model>
						</message>
					</title>

					<container>

						<!-- question presentation (text and attachments) -->
						<text>
							<message>
								<model type="html" ref="answer.question.presentation.text" />
							</message>
						</text>

						<attachments model="answer.question.presentation.attachments">
							<included>
								<hasValueDecision model="answer.question.presentation.attachments" />
							</included>
						</attachments>

						<!-- Question specific review -->
						<modelComponent model="answer.question.typeSpecificQuestion.reviewUi" />

						<!-- question feedback -->
						<text>
							<message selector="question-feedback">
								<model type="icon" icon="/icons/feedback.png" />
								<model type="html" ref="answer.question.feedback" />
							</message>
							<included>
								<hasValueDecision model="answer.question.feedback" />
							</included>
						</text>

						<!-- reason -->
						<text>
							<message selector="question-rationale">
								<model type="icon" icon="/icons/reason.png" />
								<model type="text" ref="answer.reason" />
							</message>
							<included>
								<hasValueDecision model="answer.reason" />
							</included>
						</text>

						<!-- evaluation -->
						<text>
							<message selector="submission-comments">
								<model type="icon" icon="/icons/note.png" />
							</message>
						</text>

						<htmlEdit model="answer.evaluation.comment" rows="5" cols="60" />

					</container>
				</section>
			</container>
		</section>

		<section>
			<container>
				<entityDisplay>
					<rows>
						<!--Overall Comments-->
						<row>
							<title>
								<message selector="overall-comments">
									<model type="icon" icon="/icons/note.png" />
								</message>
							</title>
							<container>
								<textEdit model="submission.evaluation.comment" rows="5" cols="60" />
							</container>
						</row>

						<!--Graded Status-->
						<row>
							<title>
								<message selector="graded-status" />
							</title>
							<container>
								<floatEdit id="total" model="submission.totalScore" cols="6">
									<title>
										<message selector="final-score">
											<model ref="submission.assessment.parts.totalPoints" />
										</message>
									</title>
								</floatEdit>
							</container>
						</row>

						<row>
							<container>
								<!--Mark as evaluated but don't release to student-->
								<selection title="mark-evaluated">
									<model ref="submission.evaluation.evaluated" />
								</selection>
								<!--Release scores and comments to student-->
								<selection title="release-scores">
									<model ref="submission.isReleased" />
								</selection>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>

		<!--navigation-->
		<navigationBar id="nav">
			<container>
				<navigation title="prev" style="BUTTON" accessKey="prev-access" description="prev-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="prev" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/previous.png" style="LEFT" />
					<destination template="/grade_submission/{0}/{1}{2}">
						<model ref="prev" />
						<model ref="sort" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="sort" />
					</included>
				</navigation>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="{0}">
						<model ref="return" />
					</destination>
				</navigation>
				<navigation title="next" style="BUTTON" accessKey="next-access" description="next-description" submit="TRUE">
					<disabled>
						<hasValueDecision model="next" reversed="TRUE" />
					</disabled>
					<icon icon="/icons/next.png" style="LEFT" />
					<destination template="/grade_submission/{0}/{1}{2}">
						<model ref="next" />
						<model ref="sort" />
						<model ref="return" />
					</destination>
					<included>
						<hasValueDecision model="sort" />
					</included>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
