<interface title="partEdit-title">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="partEdit-header">
			<model type="icon" icon="/icons/edit.png" />
			<model ref="part.ordering.position" />
		</message>
	</header>

	<subHeader>
		<container>
			<text>
				<message>
					<model ref="assessment.title" missing="no-title" />
				</message>
			</text>
		</container>
	</subHeader>

	<container>

		<navigationBar />

		<section>
			<container>
				<textEdit title="part-title" rows="1" cols="40">
					<model ref="part.title" />
				</textEdit>
				<htmlEdit title="part-instructions" model="part.presentation.text" rows="5" cols="40"/>
				<attachmentsEdit title="attachments" model="part.presentation.attachments" />
			</container>
		</section>

		<section>
			<container>

				<!--  inform if live -->
				<instructions>
					<message selector="live-warning-mpart">
						<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
					</message>
					<included>
						<decision model="assessment.isLive" />
					</included>
				</instructions>

				<!-- the list of the selected questions -->
				<entityList style="FLAT">
					<emptyTitle>
						<message selector="no-questions" />
					</emptyTitle>
					<iterator name="question" model="part.questionsAsAuthored" />
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model type="text" ref="question.id" />
							</value>
							<model ref="questionids.values" />
							<entityActions>
								<navigation destination="/select_add_mpart_question" title="select-questions" style="LINK"
									description="select-questions-description" submit="TRUE">
									<icon icon="/icons/add_manual.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
								<navigation destination="DELETEQ" selectRequirement="SOME" selectRequirementMessage="remove-failed-requirements"
									title="remove-question" style="LINK" description="remove-question-description" submit="TRUE">
									<icon icon="/icons/page_delete.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
							</entityActions>
							<readOnly>
								<decision model="assessment.isLive" />
							</readOnly>
						</selectionColumn>
						<orderColumn>
							<title>
								<message selector="question-order" />
							</title>
							<value>
								<model type="text" ref="question.id" />
							</value>
							<included>
								<decision reversed="TRUE" model="assessment.isLive" />
							</included>
							<model ref="part.questionOrder" />
						</orderColumn>
						<column>
							<title>
								<message selector="question-preview" />
							</title>
							<navigations>
								<navigation style="LINK" submit="TRUE">
									<icon icon="/icons/preview.png" style="LEFT" />
									<destination template="/question_preview/{0}">
										<model ref="question.id" />
									</destination>
								</navigation>
							</navigations>
						</column>
						<modelColumn>
							<title>
								<message selector="description" />
							</title>
							<model type="text" ref="question.description" max="60" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-type" />
							</title>
							<model ref="question.typeName" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="pool" />
							</title>
							<model ref="question.pool.title" missing="no-title" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="difficulty" />
							</title>
							<model ref="question.pool.difficulty" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="points" />
							</title>
							<model ref="question.pool.points" />
						</modelColumn>
					</columns>
				</entityList>

				<text>
					<message selector="totals">
						<model ref="part.numQuestions" />
						<model ref="part.totalPoints" />
					</message>
				</text>

			</container>
		</section>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav">
			<container>
				<navigation title="done" accessKey="done-access" description="done-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessment_edit/{0}/{1}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>

	<footer>
		<container>
			<finePrint>
				<message selector="id-display">
					<model ref="assessment.id" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-createText">
					<model type="userInfo" selector="DISPLAYNAME" ref="assessment.createdBy.UserId" />
					<model type="date" ref="assessment.createdBy.date" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-modifyText">
					<model type="userInfo" selector="DISPLAYNAME" ref="assessment.modifiedBy.UserId" />
					<model type="date" ref="assessment.modifiedBy.date" />
				</message>
			</finePrint>
		</container>
	</footer>

</interface>
