<interface title="partEdit-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="partEdit-header">
			<model type="icon" icon="/icons/edit.png" />
			<model ref="part.ordering.position" />			
		</message>
	</header>

	<container>
		<text>
			<message selector="assessment-title">
				<model ref="assessment.title" missing="no-title" />
			</message>
		</text>
		<section>
			<container>
				<entityDisplay>
					<rows>
						<row title="part-title">
							<container>
								<textEdit rows="1" cols="25">
									<model ref="part.title" />
								</textEdit>
							</container>
						</row>
						<row title="part-instructions">
							<container>
								<entityDisplay>
									<rows>
										<row>
											<container>
												<htmlEdit model="part.presentation.text" />
											</container>
										</row>
										<row title="attachments">
											<container>
												<attachmentsEdit model="part.presentation.attachments" />
											</container>
										</row>
									</rows>
								</entityDisplay>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>

		<section>
			<container>
				<!--  warn if live -->
				<alert>
					<message selector="live-warning-mpart">
						<model type="enum" messageRoot="assessment-type-" ref="assessment.type" />
					</message>
					<included>
						<decision model="assessment.isLive" />
					</included>
				</alert>

				<!-- the list of the selected questions -->
				<entityList style="FLAT">
					<emptyTitle>
						<message selector="no-questions" />
					</emptyTitle>
					<iterator name="question" model="part.questionsAsAuthored" />
					<columns>
						<selectionColumn multiple="TRUE">
							<value>
								<model type="text" ref="question.id" />
							</value>
							<model ref="questionids.values" />
							<entityActions>
								<navigation destination="/select_add_mpart_question" title="select-questions" style="LINK"
									description="select-questions-description" submit="TRUE">
									<icon icon="/icons/hand_select.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
								<navigation destination="DELETEQ" selectRequirement="SOME"
									selectRequirementMessage="remove-failed-requirements" title="remove-question" style="LINK" description="remove-question-description"
									submit="TRUE">
									<icon icon="/icons/page_delete.png" style="LEFT" />
									<disabled>
										<decision model="assessment.isLive" />
									</disabled>
								</navigation>
							</entityActions>
							<readOnly>
								<decision model="assessment.isLive" />
							</readOnly>
						</selectionColumn>
						<orderColumn>
							<title>
								<message selector="question-order" />
							</title>
							<value>
								<model type="text" ref="question.id" />
							</value>
							<included>
								<decision reversed="TRUE" model="assessment.isLive" />
							</included>
							<model ref="part.questionOrder" />
						</orderColumn>
						<modelColumn>
							<title>
								<message selector="question-pool-title" />
							</title>
							<model ref="question.pool.title" missing="no-title" />
						</modelColumn>
						<column>
							<title>
								<message selector="question-preview" />
							</title>
							<navigations>
								<navigation style="LINK" submit="TRUE">
									<icon icon="/icons/preview.png" style="LEFT" />
									<destination template="/question_preview/{0}">
										<model ref="question.id" />
									</destination>
								</navigation>
							</navigations>
						</column>
						<modelColumn>
							<title>
								<message selector="question-description" />
							</title>
							<model type="text" ref="question.description" max="60"/>
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-type" />
							</title>
							<model ref="question.typeName" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-difficulty" />
							</title>
							<model ref="question.pool.difficulty" />
						</modelColumn>
						<modelColumn>
							<title>
								<message selector="question-points" />
							</title>
							<model ref="question.pool.points" />
						</modelColumn>
					</columns>
				</entityList>
				<text>
					<message selector="num-questions">
						<model ref="part.numQuestions" />
					</message>
				</text>
				<text>
					<message selector="total-points">
						<model ref="part.totalPoints" />
					</message>
				</text>
			</container>
		</section>

		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="100%">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/assessment_edit/{0}/{1}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/assessment_edit/{0}/{1}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
