<interface title="test-publish-title">
	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>


	<header>
		<message selector="test-publish-header">
			<model type="icon" icon="/icons/active.png" />
			<model ref="assessment.title" missing="no-title" />
		</message>
	</header>
	<container>
		<section title="manage-access">
			<container>
				<instructions>
					<message selector="check-instructions"></message>
				</instructions>
			</container>
		</section>
		<section>
			<container>
				<instructions>
					<message selector="uncheck-instructions"></message>
				</instructions>
			</container>
		</section>
		<section>
			<container>
				<entityDisplay>
					<rows>
						<row title="publish">
							<container>
								<selection>
									<model ref="assessment.published" />
								</selection>
							</container>
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>
		<!-- save / cancel nav bar -->
		<navigationBar id="nav" width="20em">
			<container>
				<navigation title="save" accessKey="save-access" description="save-description" style="BUTTON" submit="TRUE" destination="/assessments">
					<icon icon="/icons/return.png" style="LEFT" />
				</navigation>
				<navigation title="cancel" accessKey="cancel-access" description="cancel-description" style="BUTTON">
					<destination template="/assessments/{0}">
						<model ref="sortcode" />
					</destination>
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
