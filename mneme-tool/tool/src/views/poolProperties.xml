<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="pools-add-header">
			<model type="icon" icon="/icons/document_add.png" />
		</message>
	</header>
	<title>
		<message selector="pools-add-title" />
	</title>
	<container>
		<section>
			<!--title highlighted="TRUE">
				<message selector="pool-id">
					<model ref="pool.id" />
				</message>
			</title-->
			<container>
				<entityDisplay>
					<rows>
						<row title="pool-id">
							<container>
								<text model="pool.id" />
							</container>
						</row>
						<row title="pool-title">
							<container>
								<textEdit model="pool.title" rows="1"
									cols="25" />
							</container>
						</row>
						<row title="pool-subject">
							<container>
								<textEdit model="pool.subject" rows="1" cols="25" options="subjects" />
							</container>
						</row>
						<row title="pool-description">
							<container>
								<textEdit model="pool.description"
									rows="5" cols="40" />
							</container>
						</row>
						<row title="pool-points">
							<container>
								<floatEdit>
									<model ref="pool.points" type="float" />
								</floatEdit>
							</container>
						</row>
						<row title="pool-difficulty">
							<container>
								<selection>
									<model ref="pool.difficulty" />
									<selectionChoices>
										<selectionChoice value="1"
											selector="Level-1" />
										<selectionChoice value="2"
											selector="Level-2" />
										<selectionChoice value="3"
											selector="Level-3" />
										<selectionChoice value="4"
											selector="Level-4" />
										<selectionChoice value="5"
											selector="Level-5" />
									</selectionChoices>
								</selection>
								<text selector="pool-difficulty-note" />
							</container>
						</row>
						<row title="pool-access">
							<container>
								<textEdit rows="1" cols="25" id="" />
								<text
									selector="pool-allow-access-description" />
							</container>
							<model type="icon" icon="/icons/access.png" />
						</row>
					</rows>
				</entityDisplay>
			</container>
		</section>


		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation destination="/pool_properties"
					title="save-title" style="BUTTON" accessKey="save-access"
					description="save-description" submit="TRUE">
					<icon icon="/icons/save.png" style="LEFT" />
				</navigation>
				<navigation destination="/pools" title="cancel"
					style="BUTTON" accessKey="cancel-access"
					description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
