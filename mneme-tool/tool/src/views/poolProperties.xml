<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="pools-add-title" />
	</title>

	<header>
		<message selector="pools-add-header">
			<model type="icon" icon="/icons/edit.png" />
		</message>
	</header>

	<container>

		<navigationBar />

		<section>
			<container>

				<textEdit title="pool-title" model="pool.title" rows="1" cols="40" />

				<textEdit title="pool-description" model="pool.description" rows="5" cols="40" />

				<floatEdit title="pool-points" model="pool.pointsEdit" cols="6">
					<onEmptyAlert>
						<message selector="missing-points" />
					</onEmptyAlert>
					<minValue>
						<model type="constant" value="0" />
					</minValue>
				</floatEdit>

				<selection title="pool-difficulty">
					<model ref="pool.difficulty" />
					<selectionChoices>
						<selectionChoice>
							<displayMessage>
								<message selector="Level-1" />
							</displayMessage>
							<valueMessage>
								<message template="1" />
							</valueMessage>
						</selectionChoice>
						<selectionChoice>
							<displayMessage>
								<message selector="Level-2" />
							</displayMessage>
							<valueMessage>
								<message template="2" />
							</valueMessage>
						</selectionChoice>
						<selectionChoice>
							<displayMessage>
								<message selector="Level-3" />
							</displayMessage>
							<valueMessage>
								<message template="3" />
							</valueMessage>
						</selectionChoice>
						<selectionChoice>
							<displayMessage>
								<message selector="Level-4" />
							</displayMessage>
							<valueMessage>
								<message template="4" />
							</valueMessage>
						</selectionChoice>
						<selectionChoice>
							<displayMessage>
								<message selector="Level-5" />
							</displayMessage>
							<valueMessage>
								<message template="5" />
							</valueMessage>
						</selectionChoice>
					</selectionChoices>
				</selection>

			</container>
		</section>

		<!-- navigation -->
		<navigationBar>
			<container>
				<navigation title="done" style="BUTTON" accessKey="done-access" description="done-description" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/pools/{0}">
						<model ref="poolsSortCode" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>

	<footer>
		<container>
			<finePrint>
				<message selector="id-display">
					<model ref="pool.id" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-createText">
					<model type="userInfo" selector="DISPLAYNAME" ref="pool.createdBy.userId" />
					<model type="date" ref="pool.createdBy.date" />
				</message>
			</finePrint>
			<finePrint>
				<message selector="history-modifyText">
					<model type="userInfo" selector="DISPLAYNAME" ref="pool.modifiedBy.userId" />
					<model type="date" ref="pool.modifiedBy.date" />
				</message>
			</finePrint>
		</container>
	</footer>

</interface>
