<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<header>
		<message selector="pools-add-header">
			<model type="icon" icon="/icons/edit.png" />
		</message>
	</header>
	<title>
		<message selector="pools-add-title" />
	</title>

	<container>
		<entityDisplay>
			<rows>
				<row title="pool-title">
					<container>
						<textEdit model="pool.title" rows="1" cols="25" />
					</container>
				</row>
				<row title="pool-description">
					<container>
						<textEdit model="pool.description" rows="5" cols="40" />
					</container>
				</row>
				<row title="pool-points">
					<container>
						<floatEdit>
							<model ref="pool.points" type="float" />
						</floatEdit>
					</container>
				</row>
				<row title="pool-difficulty">
					<container>
						<selection>
							<model ref="pool.difficulty" />
							<selectionChoices>
								<selectionChoice value="1" selector="Level-1" />
								<selectionChoice value="2" selector="Level-2" />
								<selectionChoice value="3" selector="Level-3" />
								<selectionChoice value="4" selector="Level-4" />
								<selectionChoice value="5" selector="Level-5" />
							</selectionChoices>
						</selection>
					</container>
				</row>
			</rows>
		</entityDisplay>


		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="save" style="BUTTON" accessKey="save-access" description="save-description" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/pool_properties/{0}/{1}">
						<model ref="poolsSortCode" />
						<model ref="poolsPagingParameter" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="{0}">
						<model ref="sakai_prev_destination" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

		<text>
			<message selector="id">
				<model ref="pool.id" />
			</message>
		</text>
		<text>
			<message selector="history-createText">
				<model type="userInfo" selector="DISPLAYNAME" ref="pool.createdBy.userId" />
				<model type="date" ref="pool.createdBy.date" />
			</message>
		</text>
		<text>
			<message selector="history-modifyText">
				<model type="userInfo" selector="DISPLAYNAME" ref="pool.modifiedBy.userId" />
				<model type="date" ref="pool.modifiedBy.date" />
			</message>
		</text>
	</container>
</interface>
