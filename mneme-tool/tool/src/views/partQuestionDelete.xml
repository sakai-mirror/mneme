<interface title="delete-confirm-title" header="delete-confirm-header">

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<container>
		<entityDisplay>
			<rows>
				<row>
					<container>
						<text>
							<message selector="delete-message1" />
						</text>
					</container>
				</row>
				<row>
					<title>
						<message selector="delete-show-icon">
							<model type="icon" icon="/icons/warning.gif" />
						</message>
					</title>
					<container>
						<!-- the list of tests -->
						<entityList style="FORM">
							<iterator name="partQuestion" model="partQuestions" />
							<emptyTitle>
								<message selector="no-questions" />
							</emptyTitle>
							<columns>
								<modelColumn>
									<title>
										<message selector="delete-part-ques-title">
											<model ref="part.title" missing="no-title"></model>
										</message>
									</title>
									<model ref="partQuestion.description" missing="no-description"/>
								</modelColumn>
							</columns>

						</entityList>

						<alert selector="delete-alert" />
						<text>
							<message selector="delete-message2" />
						</text>

					</container>
				</row>
			</rows>
		</entityDisplay>
		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="continue-title" style="BUTTON" accessKey="continue-access" description="continue-description" submit="TRUE">
					<destination template="/part_edit/{0}/{1}/{2}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
						<model ref="part.id" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/part_edit/{0}/{1}/{2}">
						<model ref="testsortcode" />
						<model ref="assessment.id" />
						<model ref="part.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
