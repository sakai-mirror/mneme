<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-assessment-header">
			<model type="icon" icon="/icons/grade.png" />
			<model ref="assessment.title" />
		</message>
	</header>
	<title>
		<message selector="grading-assessment-title" />
	</title>

	<container>
		<text>
			<message selector="assessment-title">
				<model ref="assessment.title" />
			</message>
		</text>
		<text>
			<message selector="assessment-total-points">
				<model ref="assessment.Parts.totalPoints" />
			</message>
		</text>

		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="grade-submission-title" style="LINK" accessKey="grade-submission-access" description="grade-submission-description"
					submit="FALSE" disabled="TRUE">
					<icon icon="/icons/grade_student.png" style="LEFT" />
					<destination template="/" />
				</navigation>
				<navigation title="grade-questions-title" style="LINK" accessKey="grade-questions-access" description="grade-questions-description">
					<icon icon="/icons/grade_questions.png" style="LEFT" />
					<destination template="/grade_questions_list/{0}/{1}">
						<model ref="gradesSortCode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>

			</container>
		</navigationBar>

		<entityDisplay>
			<rows>
				<row title="actions">
					<container>
						<navigation title="release-all-evaluated" style="LINK">
							<icon icon="/icons/checkon.gif" style="LEFT" />
							<destination template="/" />
						</navigation>
						<navigation title="release-all" style="LINK">
							<destination template="/" />
						</navigation>
					</container>
				</row>
				<row>
					<container>
						<entityDisplay>
							<rows>
								<row title="adjust-submissions">
									<container>
										<textEdit model="submissionAdjust.value" rows="1" cols="4" />
									</container>
								</row>
							</rows>
						</entityDisplay>
					</container>
				</row>
				<row>
					<container>
						<text selector="add-comments" />
					</container>
				</row>
				<row>
					<container>
						<textEdit model="submissionAdjustComments.value" rows="5" cols="40" />
					</container>
				</row>
			</rows>
		</entityDisplay>

		<entityList style="FLAT">
			<iterator name="submission">
				<model ref="submissions" indexRef="id" />
			</iterator>
			<emptyTitle>
				<message selector="no-submissions" />
			</emptyTitle>
			<pager paging="paging" submit="TRUE">
				<destination template="/grade_assessment/{0}/{1}/{2}">
					<model ref="pagingDestinationPath" />
					<model type="paging" ref="paging" />
					<model ref="view" />
				</destination>
			</pager>
			<columns>
				<modelColumn>
					<title>
						<message selector="submission-username" />
					</title>
					<entityNavigations>
						<navigation style="LINK" submit="TRUE">
							<destination template="/NAV:grade_submission/{0}/{1}">
								<model ref="destinationPath" />
								<model ref="submission.id" />
							</destination>
							<included>
								<compareDecision model="submission.gradingStatus">
									<constant value="released" />
									<constant value="submitted" />
									<constant value="closed" />
									<constant value="evaluated" />
								</compareDecision>
							</included>
						</navigation>
					</entityNavigations>
					<model type="userInfo" ref="submission.userId" selector="SORTNAME" missing="no-username" />
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="0" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_assessment/{0}/{1}/0A/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_assessment/{0}/{1}/0D/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<column>
					<title>
						<message selector="submission-finished" />
					</title>
					<container>
						<text>
							<message>
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision reversed="TRUE" model="submission.isCompletedLate" />
							</included>
						</text>
						<text>
							<message selector="submission-finished-date-late">
								<model type="date" ref="submission.submittedDate" />
							</message>
							<included>
								<decision model="submission.isCompletedLate" />
							</included>
						</text>
					</container>
					<entityIncluded>
						<decision model="submission.isComplete" />
					</entityIncluded>
				</column>

				<modelColumn>
					<title>
						<message selector="submission-status" />
					</title>
					<model type="html" ref="submission" delegate="SubmissionStatus" tool="sakai.mneme" />
					<!--model type="enum" ref="submission.gradingStatus" messageRoot="grade-status-" /-->
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="1" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_assessment/{0}/{1}/1A/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_assessment/{0}/{1}/1D/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</desc>
					</sort>
				</modelColumn>
				<column>
					<title>
						<message selector="submission-tries" />
					</title>
					<container>
						<text>
							<message selector="format-submission-tries">
								<model ref="submission.siblingCount" />
								<model ref="submission.assessment.tries" missing="infinite" />
							</message>
						</text>
					</container>
					<navigations>
						<navigation style="LINK" submit="TRUE">
							<title>
								<message selector="view-all" />
							</title>
							<destination template="/grade_assessment/{0}/{1}/{2}{3}/{4}/all">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
							<included>
								<compareDecision model="submission.siblingCount" reversed="TRUE">
									<constant value="0" />
									<constant value="1" />
								</compareDecision>
							</included>
						</navigation>
						<navigation style="LINK" submit="TRUE">
							<title>
								<message selector="close" />
							</title>
							<destination template="/grade_assessment/{0}/{1}/{2}{3}/{4}/highest">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="sort_column" />
								<model ref="sort_direction" />
								<model ref="pagingParameter" />
							</destination>
							<included>
								<compareDecision model="official">
									<constant value="FALSE" />
								</compareDecision>
								<andDecision model="submission.siblingCount">
									<compareDecision model="submission.siblingCount">
										<constant value="0" />
										<constant value="1" />
									</compareDecision>
								</andDecision>
							</included>
						</navigation>
					</navigations>
				</column>
				<column>
					<title>
						<message selector="submission-score" />
					</title>
					<container>
						<text model="submission.answersAutoScore">
							<included>
								<compareDecision model="submission.gradingStatus">
									<constant value="released" />
									<constant value="submitted" />
									<constant value="closed" />
									<constant value="evaluated" />
								</compareDecision>
							</included>
						</text>
						<text selector="missing-auto-score">
							<included>
								<compareDecision model="submission.gradingStatus" reversed="TRUE">
									<constant value="released" />
									<constant value="submitted" />
									<constant value="closed" />
									<constant value="evaluated" />
								</compareDecision>
							</included>
						</text>
					</container>
				</column>
				<column>
					<title>
						<message selector="submission-final" />
					</title>
					<sort submit="TRUE">
						<active>
							<compareDecision model="sort_column" constant="2" />
						</active>
						<direction>
							<compareDecision model="sort_direction" constant="A" />
						</direction>
						<asc icon="/icons/sortascending.gif">
							<message selector="asc" />
							<destination template="/grade_assessment/{0}/{1}/2A/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</asc>
						<desc icon="/icons/sortdescending.gif">
							<message selector="desc" />
							<destination template="/grade_assessment/{0}/{1}/2D/{2}/{3}">
								<model ref="gradesSortCode" />
								<model ref="assessment.id" />
								<model ref="pagingParameter" />
								<model ref="view" />
							</destination>
						</desc>
					</sort>
					<container>
						<floatEdit model="submission.totalScore" cols="2" />
					</container>
				</column>
			</columns>
		</entityList>

		<!--bottom navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="save" style="BUTTON" accessKey="save-access" description="save-description" submit="TRUE">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/grade_assessment_save/{0}">
						<model ref="gradesSortCode" />
					</destination>
				</navigation>
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/grades/{0}">
						<model ref="gradesSortCode" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>
