<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>
	<header>
		<message selector="grading-assessment-header">
			<model type="icon" icon="/icons/grade.png" />
		</message>
	</header>
	<title>
		<message selector="grading-assessment-title" />
	</title>

	<container>
		<text>
			<message selector="assessment-title">
				<model ref="assessment.title" />
			</message>
		</text>
		<text>
			<message selector="assessment-total-points">
				<model ref="assessment.parts.totalPoints" />
			</message>
		</text>
		<gap/>
		<!--navigation-->
		<navigationBar width="100%">
			<container>
				<navigation title="grade-submission-title" style="LINK" accessKey="grade-submission-access"
					description="grade-submission-description">
					<icon icon="/icons/grade_student.png" style="LEFT" />
					<destination template="/grade_assessment/{0}/{1}">
						<model ref="gradeSortCode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
				<navigation>
					<title>
						<message selector="nav-divider" />
					</title>
				</navigation>
				<navigation title="grade-questions-title" style="LINK" accessKey="grade-questions-access" description="grade-questions-description"
					submit="FALSE" disabled="TRUE">
					<icon icon="/icons/grade_questions.png" style="LEFT" />
					<destination template="/" />
				</navigation>
			</container>
		</navigationBar>

		<section>
			<iterator name="part" model="assessment.parts.parts" />
			<container>
				<section>
					<title>
						<message selector="question-list-part-title">
							<model ref="part.ordering.position" />
							<model ref="assessment.parts.size" />
							<model ref="part.title" />
						</message>
					</title>
					<container>
						<entityList>
							<iterator name="question" model="part.questionsUsed"></iterator>
							<columns>
								<column>
									<navigations>
										<navigation style="LINK" submit="FALSE">
											<icon icon="/icons/grade.png" />
											<destination template="/grade_question/{0}/{1}/{2}">
												<model ref="gradeSortCode" />
												<model ref="assessment.id" />
												<model ref="question.id" />
											</destination>
										</navigation>
									</navigations>
									<entityIncluded>
										<decision model="question.hasUnscoredSubmissions" />
									</entityIncluded>
								</column>
								<column>
									<navigations>
										<navigation style="LINK" submit="FALSE">
											<title>
												<message selector="question-text">
													<model ref="question.description" />
												</message>
											</title>
											<destination template="/grade_question/{0}/{1}/{2}">
												<model ref="gradeSortCode" />
												<model ref="assessment.id" />
												<model ref="question.id" />
											</destination>
										</navigation>
									</navigations>
								</column>
							</columns>
						</entityList>
					</container>
				</section>
			</container>
		</section>
		<navigationBar width="100%">
			<container>
				<navigation title="grade-return-title" style="BUTTON" accessKey="grade-return-access" description="grade-return-description">
					<icon icon="/icons/return.png" style="LEFT" />
					<destination template="/grade_assessment/{0}/{1}">
						<model ref="gradeSortCode" />
						<model ref="assessment.id" />
					</destination>
				</navigation>
			</container>
		</navigationBar>
	</container>
</interface>