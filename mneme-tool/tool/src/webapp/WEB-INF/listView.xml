<beans>

	<bean id="org.muse.mneme.tool.ListView"
			class="org.muse.mneme.tool.ListView"
			init-method="init"
			destroy-method="destroy"
			singleton="true"
			depends-on="FormatListDecoration,FormatListGrade">

 		<property name="ui"><ref bean="org.muse.ambrosia.api.UiService"/></property>
 		<property name="assessmentService"><ref bean="org.muse.mneme.api.AssessmentService"/></property>
 		<property name="toolManager"><ref bean="org.sakaiproject.tool.api.ToolManager"/></property>
 
 		<property name="toolId"><value>sakai.mneme</value></property>
 		<property name="viewId"><value>list</value></property>
 		<property name="bundle"><value>list</value></property>
		<property name="viewPath"><value>list.xml</value></property>
	</bean>

	<bean id="FormatListDecoration"
			class="org.muse.mneme.tool.FormatListDecorationDelegate"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

 		<property name="ui"><ref bean="org.muse.ambrosia.api.UiService"/></property>

 		<property name="id"><value>FormatListDecoration</value></property>
 		<property name="toolId"><value>sakai.mneme</value></property>
	</bean>

	<bean id="FormatListGrade"
			class="org.muse.mneme.tool.FormatListGradeDelegate"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

 		<property name="ui"><ref bean="org.muse.ambrosia.api.UiService"/></property>

 		<property name="id"><value>FormatListGrade</value></property>
 		<property name="toolId"><value>sakai.mneme</value></property>
	</bean>

</beans>
