<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="org.sakaiproject.assessment.api.AssessmentService"
			class="org.sakaiproject.assessment.impl.AssessmentServiceImpl"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

		<property name="timeService"><ref bean="org.sakaiproject.time.api.TimeService"/></property>
		<property name="sqlService"><ref bean="org.sakaiproject.db.api.SqlService"/></property>
		<property name="sessionManager"><ref bean="org.sakaiproject.tool.api.SessionManager"/></property>
		<property name="threadLocalManager"><ref bean="org.sakaiproject.thread_local.api.ThreadLocalManager"/></property>
		<property name="memoryService"><ref bean="org.sakaiproject.memory.api.MemoryService"/></property>
		<property name="securityService"><ref bean="org.sakaiproject.authz.api.SecurityService"/></property>
		<property name="eventTrackingService"><ref bean="org.sakaiproject.event.api.EventTrackingService"/></property>
		<property name="entityManager"><ref bean="org.sakaiproject.entity.api.EntityManager"/></property>
		<property name="attachmentService"><ref bean="org.sakaiproject.assessment.api.AttachmentService"/></property>
		<!-- for 2.4 only: <property name="gradebookService"><ref bean="org.sakaiproject.service.gradebook.GradebookExternalAssessmentService"/></property> -->
		<property name="gradebookService"><ref bean="org.sakaiproject.service.gradebook.GradebookService"/></property>

 		<property name="autoDdl"><value>${auto.ddl}</value></property>
 		<property name="cacheMinutes"><value>5</value></property>
 		<property name="cacheCleanerMinutes"><value>15</value></property>
		<property name="timeoutCheckSeconds"><value>300</value></property>
	</bean>

	<bean id="org.sakaiproject.assessment.api.AttachmentService"
			class="org.sakaiproject.assessment.impl.AttachmentServiceImpl"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

		<property name="timeService"><ref bean="org.sakaiproject.time.api.TimeService"/></property>
		<property name="sqlService"><ref bean="org.sakaiproject.db.api.SqlService"/></property>
		<property name="sessionManager"><ref bean="org.sakaiproject.tool.api.SessionManager"/></property>
		<property name="threadLocalManager"><ref bean="org.sakaiproject.thread_local.api.ThreadLocalManager"/></property>
		<property name="memoryService"><ref bean="org.sakaiproject.memory.api.MemoryService"/></property>
		<property name="eventTrackingService"><ref bean="org.sakaiproject.event.api.EventTrackingService"/></property>
		<property name="entityManager"><ref bean="org.sakaiproject.entity.api.EntityManager"/></property>
		<property name="serverConfigurationService"><ref bean="org.sakaiproject.component.api.ServerConfigurationService"/></property>
		<property name="assessmentService"><ref bean="org.sakaiproject.assessment.api.AssessmentService"/></property>

 		<property name="cacheMinutes"><value>5</value></property>
 		<property name="cacheCleanerMinutes"><value>15</value></property>
	</bean>

</beans>
