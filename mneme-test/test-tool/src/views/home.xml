<interface title="home-title" header="home-header">
	<container>

		<navigationBar />

		<section>
			<container>

				<section>
					<title selector="install-context" highlighted="TRUE">
						<message selector="install-context" />
					</title>
					<container>
						<instructions selector="install-context-instructions" />
						<textEdit title="install-value" rows="1" cols="40">
							<model ref="installValue.value" />
						</textEdit>
						<navigation title="install-context" style="LINK" destination="INSTALL" submit="TRUE">
							<confirm decision="TRUE" cancelSelector="cancel" selector="install-context-confirm" />
						</navigation>
					</container>
				</section>

				<section>
					<title highlighted="TRUE">
						<message selector="remove-context" />
					</title>
					<container>
						<instructions selector="remove-context-instructions" />
						<textEdit title="remove-value" rows="1" cols="40">
							<model ref="removeValue.value" />
						</textEdit>
						<navigation title="remove-context" style="LINK" destination="REMOVE" submit="TRUE">
							<confirm decision="TRUE" cancelSelector="cancel" selector="remove-context-confirm" />
						</navigation>
					</container>
				</section>

				<section>
					<title highlighted="TRUE">
						<message selector="install-bulk" />
					</title>
					<container>
						<instructions selector="install-bulk-instructions" />
						<textEdit title="install-bulk-value" rows="1" cols="40">
							<model ref="installBulkValue.value" />
						</textEdit>
						<navigation title="install-bulk" style="LINK" destination="INSTALL_BULK" submit="TRUE">
							<confirm decision="TRUE" cancelSelector="cancel" selector="install-bulk-confirm" />
						</navigation>
					</container>
				</section>

				<section>
					<title highlighted="TRUE">
						<message selector="swap-bulk" />
					</title>
					<container>
						<instructions selector="swap-bulk-instructions" />
						<textEdit title="swap-bulk-value" rows="1" cols="40">
							<model ref="swapBulkValue.value" />
						</textEdit>
						<navigation title="swap-bulk" style="LINK" destination="SWAP_BULK" submit="TRUE">
							<confirm decision="TRUE" cancelSelector="cancel" selector="swap-bulk-confirm" />
						</navigation>
					</container>
				</section>

				<section>
					<title highlighted="TRUE">
						<message selector="remove-bulk" />
					</title>
					<container>
						<instructions selector="remove-bulk-instructions" />
						<textEdit title="remove-bulk-value" rows="1" cols="40">
							<model ref="removeBulkValue.value" />
						</textEdit>
						<navigation title="remove-bulk" style="LINK" destination="REMOVE_BULK" submit="TRUE">
							<confirm decision="TRUE" cancelSelector="cancel" selector="remove-bulk-confirm" />
						</navigation>
					</container>
				</section>

			</container>
		</section>

		<navigationBar />

	</container>
</interface>
